{
  "hooks": {
    "PreCompact": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "./.claude/hooks/pre-compact-continuity.sh"
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "matcher": "resume|compact|clear",
        "hooks": [
          {
            "type": "command",
            "command": "./.claude/hooks/session-start-continuity.sh"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write",
        "hooks": [
          {
            "type": "command",
            "command": "./.claude/hooks/handoff-index.sh"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "./.claude/hooks/block-main-commits.sh"
          },
          {
            "type": "command",
            "command": "./.claude/hooks/worktree-protection.sh"
          }
        ]
      }
    ],
    "SubagentStop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "./.claude/hooks/subagent-stop-continuity.sh"
          }
        ]
      }
    ],
    "SessionEnd": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "./.claude/hooks/session-end-cleanup.sh"
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "./.claude/hooks/quick-actions-reminder.sh"
          }
        ]
      }
    ]
  },
  "enabledPlugins": {
    "accessibility-compliance@claude-code-workflows": true,
    "c4-architecture@claude-code-workflows": true,
    "ralph-loop@claude-plugins-official": true
  }
}
