---
import '../styles/global.scss';
import { SiteTitle, MainSite, GitHubRepo } from '../consts';
---

<header>
  <nav>
    <a href="/" class="logo-link">
      <svg width="40" height="40" viewBox="0 0 100 100" aria-hidden="true">
        <defs>
          <linearGradient id="logoGradient" x1="0%" y1="0%" x2="100%" y2="100%">
            <stop offset="0%" style="stop-color:#14b8a6" />
            <stop offset="100%" style="stop-color:#f97316" />
          </linearGradient>
        </defs>
        <circle cx="50" cy="50" r="45" fill="url(#logoGradient)" />
        <text x="50" y="68" font-family="monospace" font-size="48" font-weight="bold" fill="white" text-anchor="middle">C</text>
      </svg>
      <span class="site-title">{SiteTitle}</span>
    </a>
    <div class="nav-links">
      <a href={MainSite} class="nav-link">Main Site</a>
      <a href={GitHubRepo} class="nav-link" target="_blank" rel="noopener">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
          <path d="M12 0C5.37 0 0 5.37 0 12c0 5.31 3.435 9.795 8.205 11.385.6.105.825-.255.825-.57 0-.285-.015-1.23-.015-2.235-3.015.555-3.795-.735-4.035-1.41-.135-.345-.72-1.41-1.23-1.695-.42-.225-1.02-.78-.015-.795.945-.015 1.62.87 1.845 1.23 1.08 1.815 2.805 1.305 3.495.99.105-.78.42-1.305.765-1.605-2.67-.3-5.46-1.335-5.46-5.925 0-1.305.465-2.385 1.23-3.225-.12-.3-.54-1.53.12-3.18 0 0 1.005-.315 3.3 1.23.96-.27 1.98-.405 3-.405s2.04.135 3 .405c2.295-1.56 3.3-1.23 3.3-1.23.66 1.65.24 2.88.12 3.18.765.84 1.23 1.905 1.23 3.225 0 4.605-2.805 5.625-5.475 5.925.435.375.81 1.095.81 2.22 0 1.605-.015 2.895-.015 3.3 0 .315.225.69.825.57A12.02 12.02 0 0024 12c0-6.63-5.37-12-12-12z"/>
        </svg>
        GitHub
      </a>
    </div>
  </nav>
</header>

<style lang="scss">
  @use '../styles/colors' as colors;

  .logo-link {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    text-decoration: none;

    &:hover {
      text-decoration: none;
    }
  }

  .site-title {
    font-weight: 700;
    font-size: 1.25rem;
    color: colors.color(gray, 900);

    @media (prefers-color-scheme: dark) {
      color: colors.$white;
    }
  }

  .nav-links {
    display: flex;
    align-items: center;
    gap: 1.5rem;
  }

  .nav-link {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: colors.color(gray, 600);
    font-weight: 500;
    font-size: 0.95rem;
    text-decoration: none;
    transition: color 0.2s ease;

    &:hover {
      color: colors.color(teal, 500);
      text-decoration: none;
    }

    @media (prefers-color-scheme: dark) {
      color: colors.color(gray, 400);
    }
  }
</style>
