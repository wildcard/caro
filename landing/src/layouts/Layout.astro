---
interface Props {
  title: string;
  description?: string;
}

const { title, description = "Caro - Turn natural language into safe shell commands with local AI" } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <title>{title}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&family=JetBrains+Mono:wght@400;500;600&display=swap" rel="stylesheet" />
  </head>
  <body class="bg-slate-950 text-slate-100 font-sans">
    <slot />

    <!-- Cookie Consent Banner (GDPR/CCPA Compliant) -->
    <div id="cookie-banner" class="fixed bottom-0 left-0 right-0 z-50 hidden">
      <div class="bg-slate-900/95 backdrop-blur-sm border-t border-slate-800">
        <div class="max-w-6xl mx-auto px-4 py-3 flex flex-col sm:flex-row items-center justify-between gap-3">
          <p class="text-sm text-slate-400 text-center sm:text-left">
            We use cookies for analytics.
            <a href="/cookies" class="text-violet-400 hover:text-violet-300 underline">Learn more</a>
          </p>
          <div class="flex items-center gap-2">
            <button id="cookie-reject" class="px-3 py-1.5 text-sm text-slate-400 hover:text-slate-200 transition">
              Reject
            </button>
            <button id="cookie-accept" class="px-4 py-1.5 text-sm bg-violet-600 hover:bg-violet-700 rounded-lg transition font-medium">
              Accept
            </button>
          </div>
        </div>
      </div>
    </div>

    <script is:inline>
      (function() {
        const COOKIE_CONSENT_KEY = 'caro_cookie_consent';
        const banner = document.getElementById('cookie-banner');
        const acceptBtn = document.getElementById('cookie-accept');
        const rejectBtn = document.getElementById('cookie-reject');

        // Check if user has already made a choice
        const consent = localStorage.getItem(COOKIE_CONSENT_KEY);

        if (consent === null) {
          // No choice made yet, show banner
          banner.classList.remove('hidden');
        } else if (consent === 'accepted') {
          // Load PostHog if accepted
          loadPostHog();
        }
        // If rejected, do nothing (no tracking)

        acceptBtn.addEventListener('click', function() {
          localStorage.setItem(COOKIE_CONSENT_KEY, 'accepted');
          banner.classList.add('hidden');
          loadPostHog();
        });

        rejectBtn.addEventListener('click', function() {
          localStorage.setItem(COOKIE_CONSENT_KEY, 'rejected');
          banner.classList.add('hidden');
          // Optionally opt-out in PostHog if already loaded
          if (window.posthog) {
            window.posthog.opt_out_capturing();
          }
        });

        function loadPostHog() {
          // PostHog snippet - replace YOUR_PROJECT_API_KEY and YOUR_INSTANCE_URL
          // with your actual PostHog credentials
