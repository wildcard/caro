<?xml version="1.0" encoding="utf-8"?>
<package xmlns="http://schemas.microsoft.com/packaging/2013/05/nuspec.xsd">
  <metadata>
    <id>caro</id>
    <version>1.0.2</version>
    <title>caro - Natural Language to Shell Commands</title>
    <authors>wildcard</authors>
    <owners>wildcard</owners>
    <license type="expression">AGPL-3.0-only</license>
    <projectUrl>https://github.com/wildcard/caro</projectUrl>
