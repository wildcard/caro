---
import { t, type Locale } from '../i18n/config';

interface Props {
  lang?: Locale;
}

const { lang = 'en' } = Astro.props;

// Comparison table data structured for growth-hacking SEO and conversion
const competitors = [
  { id: 'caro', nameKey: 'caro', highlight: true },
  { id: 'copilot-cli', nameKey: 'copilotCli' },
  { id: 'warp', nameKey: 'warp' },
  { id: 'kiro', nameKey: 'kiro' },
  { id: 'opencode', nameKey: 'opencode' },
];

type FeatureValue = 'yes' | 'no' | 'partial' | string;

interface ComparisonRow {
  featureKey: string;
  values: Record<string, FeatureValue>;
}

// Category and feature keys for translation lookup
const comparisonData: { categoryKey: string; icon: string; rows: ComparisonRow[] }[] = [
  {
    categoryKey: 'privacyData',
    icon: 'üîí',
    rows: [
      { featureKey: 'worksOffline', values: { 'caro': 'yes', 'copilot-cli': 'no', 'warp': 'no', 'kiro': 'no', 'opencode': 'partial' } },
      { featureKey: 'privacyFirst', values: { 'caro': 'yes', 'copilot-cli': 'no', 'warp': 'no', 'kiro': 'no', 'opencode': 'yes' } },
      { featureKey: 'airGapped', values: { 'caro': 'yes', 'copilot-cli': 'no', 'warp': 'no', 'kiro': 'no', 'opencode': 'partial' } },
      { featureKey: 'openSource', values: { 'caro': 'yes', 'copilot-cli': 'partial', 'warp': 'no', 'kiro': 'no', 'opencode': 'yes' } },
    ]
  },
  {
    categoryKey: 'safetyControl',
    icon: 'üõ°Ô∏è',
    rows: [
      { featureKey: 'ruleBasedSafety', values: { 'caro': 'yes', 'copilot-cli': 'no', 'warp': 'no', 'kiro': 'no', 'opencode': 'no' } },
      { featureKey: 'explicitConfirmation', values: { 'caro': 'yes', 'copilot-cli': 'partial', 'warp': 'partial', 'kiro': 'partial', 'opencode': 'partial' } },
      { featureKey: 'blocksDangerous', values: { 'caro': 'yes', 'copilot-cli': 'no', 'warp': 'no', 'kiro': 'no', 'opencode': 'no' } },
      { featureKey: 'riskLevel', values: { 'caro': 'yes', 'copilot-cli': 'no', 'warp': 'no', 'kiro': 'no', 'opencode': 'no' } },
    ]
  },
  {
    categoryKey: 'shellExpertise',
    icon: 'üñ•Ô∏è',
    rows: [
      { featureKey: 'posixFirst', values: { 'caro': 'yes', 'copilot-cli': 'partial', 'warp': 'partial', 'kiro': 'partial', 'opencode': 'partial' } },
      { featureKey: 'crossPlatform', values: { 'caro': 'yes', 'copilot-cli': 'yes', 'warp': 'macOS/Linux', 'kiro': 'yes', 'opencode': 'yes' } },
      { featureKey: 'existingTerminal', values: { 'caro': 'yes', 'copilot-cli': 'yes', 'warp': 'no', 'kiro': 'yes', 'opencode': 'yes' } },
      { featureKey: 'platformAware', values: { 'caro': 'yes', 'copilot-cli': 'partial', 'warp': 'partial', 'kiro': 'partial', 'opencode': 'partial' } },
    ]
  },
  {
    categoryKey: 'modelBackend',
    icon: 'üß†',
    rows: [
      { featureKey: 'localInference', values: { 'caro': 'yes', 'copilot-cli': 'no', 'warp': 'no', 'kiro': 'no', 'opencode': 'partial' } },
      { featureKey: 'multiBackend', values: { 'caro': 'yes', 'copilot-cli': 'no', 'warp': 'no', 'kiro': 'no', 'opencode': 'yes' } },
      { featureKey: 'appleSilicon', values: { 'caro': 'partial', 'copilot-cli': 'no', 'warp': 'partial', 'kiro': 'no', 'opencode': 'no' } },
      { featureKey: 'selfHostable', values: { 'caro': 'yes', 'copilot-cli': 'no', 'warp': 'no', 'kiro': 'no', 'opencode': 'yes' } },
    ]
  },
];

// Helper to render cell value - returns key for translation
function getCellDisplay(value: FeatureValue): { icon: string; class: string; labelKey: string; isCustom: boolean; customLabel?: string } {
  switch (value) {
    case 'yes':
      return { icon: '‚úì', class: 'cell-yes', labelKey: 'yes', isCustom: false };
    case 'no':
      return { icon: '‚úó', class: 'cell-no', labelKey: 'no', isCustom: false };
    case 'partial':
      return { icon: '‚óê', class: 'cell-partial', labelKey: 'partial', isCustom: false };
    case 'planned':
      return { icon: '‚óé', class: 'cell-planned', labelKey: 'planned', isCustom: false };
    default:
      return { icon: '', class: 'cell-text', labelKey: '', isCustom: true, customLabel: value };
  }
}

// Link helpers
const telemetryHref = lang === 'en' ? '/telemetry' : `/${lang}/telemetry`;
const downloadHref = lang === 'en' ? '#download' : `/${lang}/#download`;
const compareHref = lang === 'en' ? '/compare' : `/${lang}/compare`;
---

<section id="compare" class="comparison-section">
  <div class="container">
    <h2>{t(lang, 'landing.comparison.title')}</h2>
    <p class="section-subtitle">
      {t(lang, 'landing.comparison.subtitle')}
    </p>

    <!-- Quick Summary Cards -->
    <div class="summary-cards">
      <a href={telemetryHref} class="summary-card highlight summary-card-link">
        <span class="summary-icon">üîí</span>
        <span class="summary-stat">{t(lang, 'landing.comparison.summary.privacy.stat')}</span>
        <span class="summary-label">{t(lang, 'landing.comparison.summary.privacy.label')}</span>
      </a>
      <div class="summary-card highlight">
        <span class="summary-icon">üõ°Ô∏è</span>
        <span class="summary-stat">{t(lang, 'landing.comparison.summary.safety.stat')}</span>
        <span class="summary-label">{t(lang, 'landing.comparison.summary.safety.label')}</span>
      </div>
      <div class="summary-card highlight">
        <span class="summary-icon">üì°</span>
        <span class="summary-stat">{t(lang, 'landing.comparison.summary.offline.stat')}</span>
        <span class="summary-label">{t(lang, 'landing.comparison.summary.offline.label')}</span>
      </div>
      <div class="summary-card highlight">
        <span class="summary-icon">ü¶Ä</span>
        <span class="summary-stat">{t(lang, 'landing.comparison.summary.speed.stat')}</span>
        <span class="summary-label">{t(lang, 'landing.comparison.summary.speed.label')}</span>
      </div>
    </div>

    <!-- Comparison Tables by Category -->
    {comparisonData.map((category) => (
      <div class="comparison-category">
        <h3 class="category-title">
          <span class="category-icon">{category.icon}</span>
          {t(lang, `landing.comparison.categories.${category.categoryKey}.title`)}
        </h3>
        <div class="table-wrapper">
          <table class="comparison-table">
            <thead>
              <tr>
                <th class="feature-header">{t(lang, 'landing.comparison.table.feature')}</th>
                {competitors.map((comp) => (
                  <th class={comp.highlight ? 'competitor-header highlight' : 'competitor-header'}>
                    {comp.highlight && <span class="highlight-badge">{t(lang, 'landing.comparison.table.youreHere')}</span>}
                    {t(lang, `landing.comparison.competitors.${comp.nameKey}`)}
                  </th>
                ))}
              </tr>
            </thead>
            <tbody>
              {category.rows.map((row) => {
                const featureName = t(lang, `landing.comparison.categories.${category.categoryKey}.features.${row.featureKey}.name`);
                const featureTooltip = t(lang, `landing.comparison.categories.${category.categoryKey}.features.${row.featureKey}.tooltip`);
                return (
                  <tr>
                    <td class="feature-cell" title={featureTooltip}>
                      {featureName}
                      {featureTooltip && <span class="tooltip-icon" aria-label={featureTooltip}>?</span>}
                    </td>
                    {competitors.map((comp) => {
                      const display = getCellDisplay(row.values[comp.id]);
                      const displayLabel = display.isCustom ? display.customLabel : t(lang, `landing.comparison.values.${display.labelKey}`);
                      return (
                        <td class={`value-cell ${display.class} ${comp.highlight ? 'highlight-col' : ''}`}>
                          <span class="cell-icon" aria-label={displayLabel}>{display.icon}</span>
                          {display.icon === '' && <span class="cell-text-value">{displayLabel}</span>}
                        </td>
                      );
                    })}
                  </tr>
                );
              })}
            </tbody>
          </table>
        </div>
      </div>
    ))}

    <!-- Bottom CTA -->
    <div class="comparison-cta">
      <p class="cta-text">{t(lang, 'landing.comparison.cta.text')}</p>
      <div class="cta-buttons">
        <a href={downloadHref} class="cta-button primary">{t(lang, 'landing.comparison.cta.getStarted')}</a>
        <a href={compareHref} class="cta-button secondary">{t(lang, 'landing.comparison.cta.fullComparison')}</a>
      </div>
    </div>

    <!-- Legend -->
    <div class="legend">
      <span class="legend-item"><span class="legend-icon cell-yes">‚úì</span> {t(lang, 'landing.comparison.legend.fullSupport')}</span>
      <span class="legend-item"><span class="legend-icon cell-partial">‚óê</span> {t(lang, 'landing.comparison.legend.partial')}</span>
      <span class="legend-item"><span class="legend-icon cell-no">‚úó</span> {t(lang, 'landing.comparison.legend.notSupported')}</span>
      <span class="legend-item"><span class="legend-icon cell-planned">‚óé</span> {t(lang, 'landing.comparison.legend.planned')}</span>
    </div>
  </div>
</section>

<style>
  .comparison-section {
    background: var(--color-bg-secondary);
    padding: 80px 20px;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
  }

  h2 {
    font-size: 36px;
    text-align: center;
    margin-bottom: 16px;
    color: var(--color-text);
  }

  .section-subtitle {
    text-align: center;
    color: var(--color-text-secondary);
    font-size: 18px;
    margin-bottom: 40px;
  }

  /* Summary Cards */
  .summary-cards {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(140px, 1fr));
    gap: 20px;
    margin-bottom: 50px;
    max-width: 700px;
    margin-left: auto;
    margin-right: auto;
  }

  .summary-card {
    background: var(--color-bg);
    border: 1px solid var(--color-border);
    border-radius: 12px;
    padding: 20px;
    text-align: center;
    display: flex;
    flex-direction: column;
    gap: 8px;
    transition: transform 0.2s, box-shadow 0.2s;
  }

  .summary-card.highlight {
    border-color: #ff8c42;
    box-shadow: 0 4px 12px rgba(255, 140, 66, 0.1);
  }

  .summary-card:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(255, 140, 66, 0.15);
  }

  .summary-card-link {
    text-decoration: none;
    cursor: pointer;
  }

  .summary-card-link:hover .summary-stat {
    text-decoration: underline;
  }

  .summary-icon {
    font-size: 28px;
  }

  .summary-stat {
    font-size: 24px;
    font-weight: 700;
    color: #ff8c42;
  }

  .summary-label {
    font-size: 13px;
    color: var(--color-text-secondary);
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  /* Category Headers */
  .comparison-category {
    margin-bottom: 40px;
  }

  .category-title {
    display: flex;
    align-items: center;
    gap: 12px;
    font-size: 22px;
    margin-bottom: 16px;
    color: var(--color-text);
  }

  .category-icon {
    font-size: 24px;
  }

  /* Table Wrapper for horizontal scroll on mobile */
  .table-wrapper {
    overflow-x: auto;
    border-radius: 12px;
    border: 1px solid var(--color-border);
    background: var(--color-bg);
  }

  .comparison-table {
    width: 100%;
    border-collapse: collapse;
    min-width: 700px;
  }

  .comparison-table th,
  .comparison-table td {
    padding: 14px 16px;
    text-align: center;
    border-bottom: 1px solid var(--color-border);
  }

  .comparison-table th {
    background: var(--color-bg-tertiary);
    font-weight: 600;
    font-size: 14px;
    color: var(--color-text);
    position: relative;
  }

  .comparison-table tbody tr:last-child td {
    border-bottom: none;
  }

  .comparison-table tbody tr:hover {
    background: var(--color-bg-tertiary);
  }

  .feature-header {
    text-align: left !important;
    min-width: 200px;
  }

  .competitor-header {
    min-width: 120px;
    white-space: nowrap;
  }

  .competitor-header.highlight {
    background: linear-gradient(135deg, rgba(255, 140, 66, 0.15) 0%, rgba(255, 140, 66, 0.05) 100%);
    color: #ff8c42;
  }

  .highlight-badge {
    display: block;
    font-size: 10px;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    color: #ff8c42;
    margin-bottom: 4px;
  }

  .feature-cell {
    text-align: left !important;
    font-size: 14px;
    color: var(--color-text);
    position: relative;
  }

  .tooltip-icon {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 16px;
    height: 16px;
    margin-left: 6px;
    font-size: 10px;
    font-weight: 600;
    color: var(--color-text-secondary);
    background: var(--color-bg-secondary);
    border-radius: 50%;
    cursor: help;
    vertical-align: middle;
  }

  .value-cell {
    font-size: 18px;
  }

  .highlight-col {
    background: rgba(255, 140, 66, 0.05);
  }

  .cell-icon {
    font-weight: 600;
  }

  .cell-yes .cell-icon {
    color: #22c55e;
  }

  .cell-no .cell-icon {
    color: #ef4444;
  }

  .cell-partial .cell-icon {
    color: #f59e0b;
  }

  .cell-planned .cell-icon {
    color: #8b5cf6;
  }

  .cell-text-value {
    font-size: 12px;
    color: var(--color-text-secondary);
  }

  /* CTA Section */
  .comparison-cta {
    text-align: center;
    margin: 50px 0 30px;
    padding: 40px;
    background: linear-gradient(135deg, rgba(255, 140, 66, 0.1) 0%, rgba(255, 107, 53, 0.05) 100%);
    border-radius: 16px;
    border: 1px solid rgba(255, 140, 66, 0.2);
  }

  .cta-text {
    font-size: 20px;
    font-weight: 600;
    color: var(--color-text);
    margin-bottom: 20px;
  }

  .cta-buttons {
    display: flex;
    gap: 16px;
    justify-content: center;
    flex-wrap: wrap;
  }

  .cta-button {
    display: inline-block;
    padding: 14px 28px;
    border-radius: 8px;
    font-weight: 600;
    font-size: 16px;
    text-decoration: none;
    transition: all 0.2s;
  }

  .cta-button.primary {
    background: linear-gradient(135deg, #ff8c42 0%, #ff6b35 100%);
    color: white;
    border: none;
  }

  .cta-button.primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 20px rgba(255, 140, 66, 0.3);
  }

  .cta-button.secondary {
    background: transparent;
    color: #ff8c42;
    border: 2px solid #ff8c42;
  }

  .cta-button.secondary:hover {
    background: rgba(255, 140, 66, 0.1);
  }

  /* Legend */
  .legend {
    display: flex;
    gap: 24px;
    justify-content: center;
    flex-wrap: wrap;
    font-size: 13px;
    color: var(--color-text-secondary);
  }

  .legend-item {
    display: flex;
    align-items: center;
    gap: 6px;
  }

  .legend-icon {
    font-weight: 600;
  }

  /* Responsive */
  @media (max-width: 768px) {
    h2 {
      font-size: 28px;
    }

    .summary-cards {
      grid-template-columns: repeat(2, 1fr);
    }

    .comparison-cta {
      padding: 30px 20px;
    }

    .cta-text {
      font-size: 18px;
    }

    .cta-buttons {
      flex-direction: column;
      align-items: center;
    }

    .cta-button {
      width: 100%;
      max-width: 280px;
    }
  }
</style>
