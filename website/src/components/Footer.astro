---
import { getLangFromUrl, useTranslations } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<footer>
  <div class="container">
    <p>{t('footer.built')} ü¶Ä | {t('footer.opensource')} <a href="https://github.com/wildcard/caro">GitHub</a></p>
    <p class="domain">
      <strong>caro.sh</strong> üß° - {t('footer.tagline')}
    </p>
    <p class="links">
      <a href="https://github.com/wildcard/caro/blob/main/LICENSE">AGPL-3.0</a> |
      <a href="https://github.com/wildcard/caro/contribute">{t('footer.contributing')}</a> |
      <a href="https://github.com/wildcard/caro/issues">{t('footer.issues')}</a>
    </p>
    <p class="kyaro-love">
      {t('footer.kyaro')} üêïüñ§<br>
      {t('footer.kyaro.follow')} <a href="https://www.instagram.com/kyaroblackheart/" target="_blank" rel="noopener noreferrer">Instagram @kyaroblackheart</a>
    </p>
    <p class="inspiration">{t('footer.inspiration')}</p>
  </div>
</footer>

<style>
  footer {
    text-align: center;
    padding: 40px 20px;
    background: var(--color-footer-bg);
    color: var(--color-footer-text);
    transition: background 0.3s ease, color 0.3s ease;
  }

  footer a {
    color: #ff8c42;
    text-decoration: none;
    transition: color 0.3s ease;
  }

  footer a:hover {
    text-decoration: underline;
  }

  .domain {
    margin-top: 15px;
    font-size: 16px;
  }

  .links {
    margin-top: 10px;
    font-size: 14px;
    color: var(--color-links-muted);
    transition: color 0.3s ease;
  }

  .kyaro-love {
    margin-top: 20px;
    font-size: 15px;
    color: var(--color-footer-text);
    font-weight: 500;
    transition: color 0.3s ease;
  }

  .kyaro-love a {
    color: #ff8c42;
    font-weight: 600;
  }

  .inspiration {
    margin-top: 10px;
    font-size: 13px;
    color: var(--color-footer-text-muted);
    font-style: italic;
    transition: color 0.3s ease;
  }
</style>
