<style>
  .hero {
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    text-align: center;
    padding: 60px 20px;
    background: var(--color-bg);
    position: relative;
  }

  .ascii-art-top,
  .ascii-art-bottom {
    font-family: 'JetBrains Mono', monospace;
    color: var(--color-text);
    font-size: 9px;
    line-height: 1.1;
    white-space: pre;
    margin: 20px 0;
    text-shadow: 0 0 10px var(--glow-color);
    font-weight: 400;
  }

  .companion-badge {
    display: inline-flex;
    align-items: center;
    gap: 10px;
    background: var(--color-bg-secondary);
    color: var(--color-text);
    padding: 10px 24px;
    border: 2px solid var(--color-border);
    font-size: 12px;
    font-weight: 700;
    margin-bottom: 30px;
    text-transform: uppercase;
    letter-spacing: 2px;
    box-shadow: 0 0 15px var(--glow-color), 4px 4px 0 var(--color-border);
  }

  .companion-badge .icon {
    width: 18px;
    height: 18px;
  }

  .pixel-art {
    width: 140px;
    height: auto;
    image-rendering: pixelated;
    image-rendering: -moz-crisp-edges;
    image-rendering: crisp-edges;
    margin-bottom: 25px;
    border: 3px solid var(--color-border);
    box-shadow: 0 0 20px var(--glow-color);
    padding: 5px;
    background: var(--color-bg-secondary);
  }

  .logo {
    margin-bottom: 30px;
  }

  .logo-text {
    font-size: 72px;
    font-weight: 900;
    color: var(--color-text);
    letter-spacing: 8px;
    text-shadow:
      0 0 20px var(--glow-color),
      0 0 40px var(--glow-color),
      3px 3px 0 var(--color-border);
    line-height: 1;
    margin-bottom: 10px;
  }

  .logo-subtitle {
    font-size: 14px;
    color: var(--color-text-secondary);
    letter-spacing: 4px;
    font-weight: 700;
    text-transform: uppercase;
  }

  .tagline {
    font-size: 32px;
    font-weight: 700;
    margin-bottom: 35px;
    color: var(--color-text);
    letter-spacing: 2px;
    text-shadow: 0 0 15px var(--glow-color);
  }

  .feature-tags {
    display: flex;
    gap: 20px;
    justify-content: center;
    flex-wrap: wrap;
    margin-bottom: 40px;
  }

  .tag {
    display: flex;
    align-items: center;
    gap: 8px;
    padding: 8px 20px;
    background: var(--color-bg-tertiary);
    border: 2px solid var(--color-border);
    color: var(--color-text-secondary);
    font-size: 13px;
    font-weight: 700;
    letter-spacing: 1px;
    box-shadow: 0 0 10px var(--glow-color);
  }

  .tag-icon {
    width: 16px;
    height: 16px;
  }

  .github-star-wrapper {
    margin-bottom: 40px;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .cta-buttons {
    display: flex;
    gap: 20px;
    justify-content: center;
    flex-wrap: wrap;
    margin-bottom: 30px;
  }

  .cta-button {
    display: flex;
    align-items: center;
    gap: 10px;
    padding: 16px 32px;
    text-decoration: none;
    border: 3px solid var(--color-border);
    font-size: 15px;
    font-weight: 700;
    letter-spacing: 1px;
    cursor: pointer;
    transition: all 0.15s ease;
  }

  .cta-button.primary {
    background: var(--color-primary);
    color: var(--color-bg);
    box-shadow: 0 0 20px var(--glow-color), 4px 4px 0 var(--color-border);
  }

  .cta-button.primary:hover {
    box-shadow: 0 0 30px var(--glow-color), 4px 4px 0 var(--color-border);
    transform: translateY(-2px);
  }

  .cta-button.primary:active {
    box-shadow: 0 0 15px var(--glow-color), 2px 2px 0 var(--color-border);
    transform: translate(2px, 2px);
  }

  .cta-button.secondary {
    background: var(--color-bg);
    color: var(--color-text);
    box-shadow: 0 0 15px var(--glow-color), 4px 4px 0 var(--color-border);
  }

  .cta-button.secondary:hover {
    background: var(--color-bg-secondary);
    box-shadow: 0 0 25px var(--glow-color), 4px 4px 0 var(--color-border);
    transform: translateY(-2px);
  }

  .cta-button.secondary:active {
    box-shadow: 0 0 15px var(--glow-color), 2px 2px 0 var(--color-border);
    transform: translate(2px, 2px);
  }

  .button-icon {
    width: 20px;
    height: 20px;
  }

  @media (max-width: 768px) {
    .ascii-art-top,
    .ascii-art-bottom {
      font-size: 6px;
      overflow-x: auto;
    }

    .logo-text {
      font-size: 48px;
      letter-spacing: 4px;
    }

    .logo-subtitle {
      font-size: 11px;
    }

    .pixel-art {
      width: 100px;
    }

    .tagline {
      font-size: 22px;
      letter-spacing: 1px;
    }

    .feature-tags {
      gap: 10px;
    }

    .tag {
      font-size: 11px;
      padding: 6px 14px;
    }

    .cta-buttons {
      flex-direction: column;
      gap: 15px;
      width: 100%;
      max-width: 300px;
    }

    .cta-button {
      width: 100%;
      justify-content: center;
    }
  }
</style>
