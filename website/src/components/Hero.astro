---
import GitHubStarButton from './GitHubStarButton.astro';
import TerminalShowcase from './TerminalShowcase.astro';
---

<div class="hero">
  <div class="container">
    <div class="companion-badge">üêï Companion Agent</div>
    <img src="/caro-prompting.gif" alt="Caro - 8-bit pixel art" class="pixel-art" />
    <div class="logo">Caro</div>
    <h1 class="tagline">Your loyal shell companion</h1>
    <p class="subtitle">
      A specialized POSIX shell command agent for Claude users. Validates AI-generated commands with safety-first design, detects dangerous patterns, and ensures POSIX compliance.
    </p>
    <div class="plugin-install">
      <span class="install-label">Available as a Claude Skill:</span>
      <code class="install-command">/plugin install wildcard/caro</code>
    </div>
    <div class="github-star-wrapper">
      <GitHubStarButton />
    </div>
    <div class="cta-buttons">
      <a href="#download" class="cta-button">Get Started</a>
      <a href="#how-it-works" class="cta-button secondary">Watch Demo</a>
    </div>

    <!-- Terminal Showcase -->
    <TerminalShowcase />
  </div>
</div>

<style>
  .hero {
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    text-align: center;
    padding: 60px 20px;
    background: linear-gradient(135deg, var(--color-bg-tertiary) 0%, var(--color-bg) 100%);
    transition: background 0.3s ease;
  }

  .logo {
    font-size: 72px;
    margin-bottom: 20px;
    font-weight: 700;
    background: linear-gradient(135deg, #ff8c42 0%, #ff6b35 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .companion-badge {
    display: inline-block;
    background: linear-gradient(135deg, #ff8c42 0%, #ff6b35 100%);
    color: white;
    padding: 8px 20px;
    border-radius: 20px;
    font-size: 14px;
    font-weight: 600;
    margin-bottom: 20px;
    text-transform: uppercase;
    letter-spacing: 1px;
  }

  .tagline {
    font-size: 38px;
    font-weight: 600;
    margin-bottom: 20px;
    color: var(--color-text);
    transition: color 0.3s ease;
  }

  .subtitle {
    font-size: 20px;
    color: var(--color-text-secondary);
    margin-bottom: 30px;
    max-width: 700px;
    line-height: 1.7;
    transition: color 0.3s ease;
  }

  .subtitle code {
    background: rgba(255, 140, 66, 0.1);
    padding: 2px 8px;
    border-radius: 4px;
    font-family: 'Monaco', 'Menlo', monospace;
    font-size: 0.9em;
    color: #ff8c42;
    border: 1px solid rgba(255, 140, 66, 0.2);
  }

  :global(.dark) .subtitle code {
    background: rgba(255, 140, 66, 0.15);
    border-color: rgba(255, 140, 66, 0.3);
  }

  .plugin-install {
    margin-top: 20px;
    margin-bottom: 30px;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 12px;
    flex-wrap: wrap;
  }

  .install-label {
    font-size: 16px;
    color: var(--color-text-secondary);
    font-weight: 500;
  }

  .install-command {
    background: rgba(255, 140, 66, 0.1);
    padding: 8px 16px;
    border-radius: 6px;
    font-family: 'Monaco', 'Menlo', monospace;
    font-size: 16px;
    color: #ff8c42;
    border: 1px solid rgba(255, 140, 66, 0.2);
    font-weight: 600;
  }

  :global(.dark) .install-command {
    background: rgba(255, 140, 66, 0.15);
    border-color: rgba(255, 140, 66, 0.3);
  }

  .github-star-wrapper {
    margin-bottom: 30px;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .cta-buttons {
    display: flex;
    gap: 10px;
    justify-content: center;
    flex-wrap: wrap;
  }

  .cta-button {
    display: inline-block;
    padding: 16px 40px;
    background: linear-gradient(135deg, #ff8c42 0%, #ff6b35 100%);
    color: white;
    text-decoration: none;
    border-radius: 8px;
    font-size: 18px;
    font-weight: 600;
    transition: transform 0.2s, box-shadow 0.2s;
  }

  .cta-button:hover {
    transform: translateY(-2px);
    box-shadow: 0 10px 25px rgba(255, 140, 66, 0.3);
  }

  .cta-button.secondary {
    background: transparent;
    border: 2px solid #ff8c42;
    color: #ff8c42;
  }

  .cta-button.secondary:hover {
    background: rgba(255, 140, 66, 0.1);
    box-shadow: 0 10px 25px rgba(255, 140, 66, 0.2);
  }

  :global(.dark) .cta-button.secondary:hover {
    background: rgba(255, 140, 66, 0.15);
  }

  .pixel-art {
    width: 100px;
    height: auto;
    image-rendering: pixelated;
    image-rendering: -moz-crisp-edges;
    image-rendering: crisp-edges;
    margin-bottom: -30px;
    animation: float 3s ease-in-out infinite;
  }

  @keyframes float {
    0%, 100% {
      transform: translateY(0px);
    }
    50% {
      transform: translateY(-10px);
    }
  }

  /* Tablet */
  @media (max-width: 768px) {
    .pixel-art {
      width: 70px;
      height: auto;
    }

    .logo {
      font-size: 48px;
    }

    .tagline {
      font-size: 28px;
    }

    .subtitle {
      font-size: 18px;
    }

    .cta-button {
      padding: 14px 32px;
      font-size: 16px;
    }
  }

  /* Mobile */
  @media (max-width: 600px) {
    .hero {
      padding: 40px 16px;
      min-height: auto;
    }

    .companion-badge {
      font-size: 12px;
      padding: 6px 14px;
    }

    .logo {
      font-size: 42px;
    }

    .tagline {
      font-size: 24px;
      margin-bottom: 16px;
    }

    .subtitle {
      font-size: 16px;
      line-height: 1.6;
      margin-bottom: 24px;
    }

    .plugin-install {
      flex-direction: column;
      gap: 8px;
      margin-bottom: 24px;
    }

    .install-label {
      font-size: 14px;
    }

    .install-command {
      font-size: 14px;
      padding: 8px 14px;
    }

    .cta-buttons {
      flex-direction: column;
      width: 100%;
      gap: 12px;
    }

    .cta-button {
      width: 100%;
      padding: 14px 24px;
      font-size: 16px;
      text-align: center;
    }

    .github-star-wrapper {
      margin-bottom: 24px;
    }
  }

  /* Small mobile */
  @media (max-width: 360px) {
    .hero {
      padding: 30px 14px;
    }

    .logo {
      font-size: 36px;
    }

    .tagline {
      font-size: 22px;
    }

    .subtitle {
      font-size: 15px;
    }

    .pixel-art {
      width: 60px;
    }

    .install-command {
      font-size: 13px;
    }
  }
</style>
