---
/**
 * MinimalFeatures Component
 * Highlights key features in a clean, minimal layout
 */
import { t, type Locale } from '../i18n/config';

interface Props {
  lang?: Locale;
}

const { lang = 'en' } = Astro.props;

const features = [
  {
    icon: 'ðŸ”’',
    title: 'Safety first',
    description: 'Every generated command is validated against dangerous patterns before execution. You always review and approve.'
  },
  {
    icon: 'ðŸš€',
    title: 'Local & private',
    description: 'Run entirely on your machine with local models. Your commands and history never leave your system.'
  },
  {
    icon: 'âš¡',
    title: 'Lightning fast',
    description: 'Optimized for speed with intelligent caching. Get instant suggestions for common patterns.'
  },
  {
    icon: 'ðŸ”§',
    title: 'Fully customizable',
    description: 'Configure backends, safety rules, and aliases. Works with multiple inference engines.'
  }
