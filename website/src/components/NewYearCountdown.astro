---
// New Year Countdown Component
// Shows a minimized badge > 5 hours before midnight
// Shows prominent countdown < 5 hours before midnight
// Displays celebration message on New Year's Day
---

<div id="new-year-countdown" class="countdown-container hidden">
  <button id="countdown-close" class="close-button" aria-label="Close countdown" title="Close">âœ•</button>
  <button id="countdown-minimize" class="minimize-button" aria-label="Minimize countdown" title="Minimize">âˆ’</button>

  <div class="countdown-content">
    <div class="countdown-title">Happy New Year!</div>
    <div class="countdown-subtitle">Ring in 2026</div>
    <div class="countdown-timer hidden">
      <div class="time-unit">
        <span class="time-value" id="days">00</span>
        <span class="time-label">Days</span>
      </div>
      <div class="time-separator">:</div>
      <div class="time-unit">
        <span class="time-value" id="hours">00</span>
        <span class="time-label">Hours</span>
      </div>
      <div class="time-separator">:</div>
      <div class="time-unit">
        <span class="time-value" id="minutes">00</span>
        <span class="time-label">Minutes</span>
      </div>
      <div class="time-separator">:</div>
      <div class="time-unit">
        <span class="time-value" id="seconds">00</span>
        <span class="time-label">Seconds</span>
      </div>
    </div>
  </div>
</div>

<!-- Minimized badge (bottom right corner) -->
<div id="countdown-badge" class="countdown-badge hidden">
  <div class="badge-content">
    <span class="badge-icon">ðŸŽŠ</span>
    <span class="badge-text"><span id="badge-hours">00</span>:<span id="badge-minutes">00</span>:<span id="badge-seconds">00</span></span>
  </div>
</div>

<style>
  /* Main countdown (sticky top-left, below logo) */
  .countdown-container {
    position: fixed;
    top: 80px;
    left: 20px;
    z-index: 9999;
    width: fit-content;
    max-width: 380px;
    background: linear-gradient(135deg, rgba(20, 20, 20, 0.98) 0%, rgba(30, 30, 30, 0.98) 100%);
    backdrop-filter: blur(20px);
    border: 2px solid transparent;
    background-image:
      linear-gradient(135deg, rgba(20, 20, 20, 0.98) 0%, rgba(30, 30, 30, 0.98) 100%),
      linear-gradient(135deg, #ffd700 0%, #ff6b35 50%, #4ecdc4 100%);
    background-origin: border-box;
    background-clip: padding-box, border-box;
    border-radius: 16px;
    padding: 24px 32px;
    box-shadow:
      0 8px 24px rgba(0, 0, 0, 0.5),
      0 0 40px rgba(255, 215, 0, 0.15);
    animation: slideInFromLeft 0.5s cubic-bezier(0.34, 1.56, 0.64, 1);
    transition: all 0.3s ease;
  }

  .countdown-container.hidden {
    display: none;
  }

  .countdown-container.minimized {
    opacity: 0;
    transform: translateX(-120px) scale(0.9);
    pointer-events: none;
  }

  /* Close and minimize buttons */
  .close-button,
  .minimize-button {
    position: absolute;
    top: 16px;
    width: 32px;
    height: 32px;
    border: none;
    background: rgba(255, 255, 255, 0.1);
    color: rgba(255, 255, 255, 0.7);
    border-radius: 8px;
    cursor: pointer;
    font-size: 18px;
    font-weight: bold;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.2s ease;
  }

  .close-button {
    right: 16px;
  }

  .minimize-button {
    right: 56px;
  }

  .close-button:hover,
  .minimize-button:hover {
    background: rgba(255, 255, 255, 0.2);
    color: white;
    transform: scale(1.1);
  }

  .countdown-content {
    text-align: center;
    color: white;
    padding-top: 32px; /* Space below close/minimize buttons */
  }

  .countdown-title {
    font-size: 28px;
    font-weight: 800;
    margin-bottom: 4px;
    background: linear-gradient(135deg, #ffd700 0%, #ff6b35 50%, #4ecdc4 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    background-size: 200% 200%;
    animation: gradientShift 4s ease infinite;
    letter-spacing: -0.5px;
  }

  .countdown-subtitle {
    font-size: 13px;
    color: rgba(255, 255, 255, 0.7);
    margin-bottom: 14px;
    font-weight: 500;
    letter-spacing: 1px;
    text-transform: uppercase;
  }

  .countdown-timer {
    display: flex;
    gap: 8px;
    align-items: center;
    justify-content: center;
  }

  .countdown-timer.hidden {
    display: none;
  }

  .time-unit {
    display: flex;
    flex-direction: column;
    align-items: center;
    min-width: 58px;
    padding: 10px 8px;
    background: rgba(255, 255, 255, 0.05);
    border-radius: 8px;
    border: 1px solid rgba(255, 255, 255, 0.1);
  }

  .time-value {
    font-size: 26px;
    font-weight: 700;
    font-family: 'SF Mono', 'Monaco', 'Courier New', monospace;
    background: linear-gradient(135deg, #ffd700 0%, #ff8c42 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    line-height: 1;
  }

  .time-label {
    font-size: 9px;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    color: rgba(255, 255, 255, 0.6);
    margin-top: 6px;
    font-weight: 600;
  }

  .time-separator {
    font-size: 22px;
    color: rgba(255, 215, 0, 0.6);
    font-weight: 300;
    margin: 0 4px;
  }

  /* Minimized badge (bottom right, above FABs) */
  .countdown-badge {
    position: fixed;
    bottom: 170px; /* Above mute toggle (100px) + back-to-top (40px) + gap */
    right: 24px;
    z-index: 999; /* Below FABs z-index of 1000 */
    background: linear-gradient(135deg, #ffd700 0%, #ff6b35 50%, #4ecdc4 100%);
    border-radius: 50px;
    padding: 12px 20px;
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.3);
    cursor: pointer;
    transition: all 0.3s ease;
    animation: slideInBadge 0.4s cubic-bezier(0.34, 1.56, 0.64, 1);
  }

  .countdown-badge.hidden {
    display: none;
  }

  .countdown-badge:hover {
    transform: translateY(-4px) scale(1.05);
    box-shadow: 0 12px 32px rgba(255, 215, 0, 0.4);
  }

  .badge-content {
    display: flex;
    align-items: center;
    gap: 8px;
    color: white;
  }

  .badge-icon {
    font-size: 20px;
  }

  .badge-text {
    font-family: 'SF Mono', 'Monaco', 'Courier New', monospace;
    font-size: 16px;
    font-weight: 700;
  }

  /* Animations */
  @keyframes slideInFromLeft {
    0% {
      opacity: 0;
      transform: translateX(-100px);
    }
    100% {
      opacity: 1;
      transform: translateX(0);
    }
  }

  @keyframes fadeInScale {
    0% {
      opacity: 0;
      transform: translate(-50%, -50%) scale(0.9);
    }
    100% {
      opacity: 1;
      transform: translate(-50%, -50%) scale(1);
    }
  }

  @keyframes slideInBadge {
    0% {
      opacity: 0;
      transform: translateX(100px);
    }
    100% {
      opacity: 1;
      transform: translateX(0);
    }
  }

  @keyframes gradientShift {
    0%, 100% {
      background-position: 0% 50%;
    }
    50% {
      background-position: 100% 50%;
    }
  }

  /* Mobile responsive */
  @media (max-width: 768px) {
    .countdown-container {
      padding: 18px 24px;
      max-width: calc(100vw - 40px);
      top: 72px;
      left: 10px;
    }

    .countdown-title {
      font-size: 22px;
    }

    .countdown-subtitle {
      font-size: 11px;
    }

    .time-unit {
      min-width: 48px;
      padding: 8px 6px;
    }

    .time-value {
      font-size: 20px;
    }

    .time-separator {
      font-size: 18px;
    }

    .countdown-badge {
      bottom: 140px; /* Above mobile FABs (75px mute + 20px back-to-top + gap) */
      right: 16px;
    }
  }

  @media (max-width: 480px) {
    .countdown-container {
      padding: 14px 18px;
      left: 5px;
    }

    .countdown-title {
      font-size: 18px;
    }

    .countdown-subtitle {
      font-size: 10px;
      margin-bottom: 10px;
    }

    .countdown-timer {
      gap: 6px;
    }

    .time-unit {
      min-width: 42px;
      padding: 6px 4px;
    }

    .time-value {
      font-size: 16px;
    }

    .time-label {
      font-size: 8px;
    }

    .time-separator {
      font-size: 14px;
      margin: 0 2px;
    }

    .badge-text {
      font-size: 14px;
    }
  }

  /* Reduce motion for accessibility */
  @media (prefers-reduced-motion: reduce) {
    .countdown-container,
    .countdown-badge {
      animation: none;
    }

    .countdown-title {
      animation: none;
    }
  }
</style>

<script>
  // New Year Countdown Logic
  class NewYearCountdown {
    private container: HTMLElement | null;
    private badge: HTMLElement | null;
    private timer: HTMLElement | null;
    private title: HTMLElement | null;
    private subtitle: HTMLElement | null;
    private closeButton: HTMLElement | null;
    private minimizeButton: HTMLElement | null;
    private intervalId: number | null = null;
    private isMinimized: boolean = false;
    private isClosed: boolean = false;

    private readonly URGENT_THRESHOLD_HOURS = 5; // Show prominent countdown when < 5 hours left
    private readonly AUTO_MINIMIZE_DELAY = 8000; // Auto-minimize after 8 seconds

    constructor() {
      this.container = document.getElementById('new-year-countdown');
      this.badge = document.getElementById('countdown-badge');
      this.timer = this.container?.querySelector('.countdown-timer') || null;
      this.title = this.container?.querySelector('.countdown-title') || null;
      this.subtitle = this.container?.querySelector('.countdown-subtitle') || null;
      this.closeButton = document.getElementById('countdown-close');
      this.minimizeButton = document.getElementById('countdown-minimize');

      this.init();
      this.setupEventListeners();
    }

    private init(): void {
      // Check if effects are disabled
      const effectsDisabled = localStorage.getItem('effectsDisabled') === 'true';
      if (effectsDisabled) {
        return;
      }

      // Check if user closed it
      const closedToday = localStorage.getItem('countdownClosedDate');
      const today = new Date().toDateString();
      if (closedToday === today) {
        this.isClosed = true;
        return;
      }

      let now = new Date();

      // Support test date override (localhost only)
      if ((window as any).__CARO_TEST_DATE) {
        now = new Date((window as any).__CARO_TEST_DATE);
        console.log('ðŸ§ª Countdown using test date:', now.toDateString());
      }

      const month = now.getMonth();
      const day = now.getDate();

      // Show countdown on December 31
      if (month === 11 && day === 31) {
        this.showCountdown();
      }
      // Show celebration on January 1
      else if (month === 0 && day === 1) {
        this.showCelebration();
      }
    }

    private setupEventListeners(): void {
      // Close button
      this.closeButton?.addEventListener('click', () => this.close());

      // Minimize button
      this.minimizeButton?.addEventListener('click', () => this.minimize());

      // Badge click - expand to full countdown
      this.badge?.addEventListener('click', () => this.expand());

      // Auto-minimize on scroll (only when not urgent)
      let scrollTimeout: number;
      window.addEventListener('scroll', () => {
        if (!this.isMinimized && this.container && !this.container.classList.contains('hidden')) {
          clearTimeout(scrollTimeout);
          scrollTimeout = window.setTimeout(() => {
            const hoursLeft = this.getHoursUntilMidnight();
            if (hoursLeft > this.URGENT_THRESHOLD_HOURS) {
              this.minimize();
            }
          }, 500);
        }
      }, { passive: true });
    }

    private getHoursUntilMidnight(): number {
      let now = new Date();
      if ((window as any).__CARO_TEST_DATE) {
        now = new Date((window as any).__CARO_TEST_DATE);
      }
      const currentYear = now.getFullYear();
      const newYear = new Date(currentYear + 1, 0, 1, 0, 0, 0);
      const diff = newYear.getTime() - now.getTime();
      return diff / (1000 * 60 * 60);
    }

    private showCountdown(): void {
      if (!this.container || !this.timer || !this.title || !this.subtitle) return;

      // Update title and subtitle for countdown
      this.title.textContent = 'New Year Countdown';
      this.subtitle.textContent = 'Ring in 2026';

      // Show timer
      this.timer.classList.remove('hidden');

      // Start countdown
      this.updateCountdown();
      this.intervalId = window.setInterval(() => this.updateCountdown(), 1000);

      // Decide whether to show full modal or just badge
      const hoursLeft = this.getHoursUntilMidnight();

      if (hoursLeft <= this.URGENT_THRESHOLD_HOURS) {
        // < 5 hours: Show prominent countdown
        this.container.classList.remove('hidden');

        // Auto-minimize after delay (only if > 1 hour left)
        if (hoursLeft > 1) {
          setTimeout(() => {
            if (!this.isClosed) {
              this.minimize();
            }
          }, this.AUTO_MINIMIZE_DELAY);
        }
      } else {
        // > 5 hours: Show only badge
        this.badge?.classList.remove('hidden');
      }
    }

    private showCelebration(): void {
      if (!this.container || !this.timer || !this.title || !this.subtitle) return;

      // Update for celebration
      this.title.textContent = 'Happy New Year!';
      this.subtitle.textContent = 'Welcome to 2026!';
      this.timer.classList.add('hidden');

      // Show celebration modal
      this.container.classList.remove('hidden');

      // Auto-hide after 10 seconds
      setTimeout(() => {
        this.container?.classList.add('hidden');
      }, 10000);

      // Trigger fireworks effect
      setTimeout(() => {
        if ((window as any).newYearEffect) {
          (window as any).newYearEffect.start();
        }
      }, 1000);
    }

    private updateCountdown(): void {
      let now = new Date();
      if ((window as any).__CARO_TEST_DATE) {
        now = new Date((window as any).__CARO_TEST_DATE);
      }

      const currentYear = now.getFullYear();
      const newYear = new Date(currentYear + 1, 0, 1, 0, 0, 0);
      const diff = newYear.getTime() - now.getTime();

      if (diff <= 0) {
        // Countdown finished! Switch to celebration
        if (this.intervalId) {
          clearInterval(this.intervalId);
          this.intervalId = null;
        }
        this.showCelebration();
        return;
      }

      const days = Math.floor(diff / (1000 * 60 * 60 * 24));
      const hours = Math.floor((diff % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
      const minutes = Math.floor((diff % (1000 * 60 * 60)) / (1000 * 60));
      const seconds = Math.floor((diff % (1000 * 60)) / 1000);

      // Update main timer
      const daysEl = document.getElementById('days');
      const hoursEl = document.getElementById('hours');
      const minutesEl = document.getElementById('minutes');
      const secondsEl = document.getElementById('seconds');

      if (daysEl) daysEl.textContent = String(days).padStart(2, '0');
      if (hoursEl) hoursEl.textContent = String(hours).padStart(2, '0');
      if (minutesEl) minutesEl.textContent = String(minutes).padStart(2, '0');
      if (secondsEl) secondsEl.textContent = String(seconds).padStart(2, '0');

      // Update badge timer
      const badgeHours = document.getElementById('badge-hours');
      const badgeMinutes = document.getElementById('badge-minutes');
      const badgeSeconds = document.getElementById('badge-seconds');

      const totalHours = days * 24 + hours;
      if (badgeHours) badgeHours.textContent = String(totalHours).padStart(2, '0');
      if (badgeMinutes) badgeMinutes.textContent = String(minutes).padStart(2, '0');
      if (badgeSeconds) badgeSeconds.textContent = String(seconds).padStart(2, '0');

      // Check if we should switch to prominent mode
      const hoursLeft = this.getHoursUntilMidnight();
      if (hoursLeft <= this.URGENT_THRESHOLD_HOURS && this.isMinimized && !this.isClosed) {
        this.expand();
      }
    }

    private minimize(): void {
      this.isMinimized = true;
      this.container?.classList.add('minimized');
      setTimeout(() => {
        this.container?.classList.add('hidden');
        this.badge?.classList.remove('hidden');
      }, 300);
    }

    private expand(): void {
      this.isMinimized = false;
      this.badge?.classList.add('hidden');
      this.container?.classList.remove('hidden', 'minimized');
    }

    private close(): void {
      this.isClosed = true;
      localStorage.setItem('countdownClosedDate', new Date().toDateString());

      this.container?.classList.add('hidden');
      this.badge?.classList.add('hidden');

      if (this.intervalId) {
        clearInterval(this.intervalId);
        this.intervalId = null;
      }
    }
  }

  // Initialize countdown when DOM is ready
  document.addEventListener('DOMContentLoaded', () => {
    new NewYearCountdown();
  });
</script>
