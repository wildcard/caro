---
/**
 * TerminalShowcase Component
 * Displays animated terminal window showing example caro commands
 * with realistic Caro output formatting
 */
---

<div class="terminal-showcase">
  <div class="terminal-window">
    <div class="terminal-header">
      <div class="terminal-dots">
        <span class="dot red"></span>
        <span class="dot yellow"></span>
        <span class="dot green"></span>
      </div>
      <div class="terminal-title">caro ‚Äî shell companion</div>
    </div>
    <div class="terminal-body">
      <div class="command-examples">
        <div class="example active" data-example="0">
          <div class="command-line">
            <span class="prompt">$</span>
            <span class="command">caro "show current directory contents"</span>
          </div>
          <div class="output-line">
            <span class="caro-prefix">üêï Caro:</span>
            <span class="result">ls -la</span>
          </div>
          <div class="safety-line">
            <span class="safety-check">‚úì</span>
            <span class="safety-text">Safe to run on your system</span>
          </div>
        </div>
        <div class="example" data-example="1">
          <div class="command-line">
            <span class="prompt">$</span>
            <span class="command">caro "find large files over 100MB"</span>
          </div>
          <div class="output-line">
            <span class="caro-prefix">üêï Caro:</span>
            <span class="result">find . -type f -size +100M</span>
          </div>
          <div class="safety-line">
            <span class="safety-check">‚úì</span>
            <span class="safety-text">Safe to run on your system</span>
          </div>
        </div>
        <div class="example" data-example="2">
          <div class="command-line">
            <span class="prompt">$</span>
            <span class="command">caro "show disk usage by folder"</span>
          </div>
          <div class="output-line">
            <span class="caro-prefix">üêï Caro:</span>
            <span class="result">du -sh */ | sort -rh | head -10</span>
          </div>
          <div class="safety-line">
            <span class="safety-check">‚úì</span>
            <span class="safety-text">Safe to run on your system</span>
          </div>
        </div>
        <div class="example" data-example="3">
          <div class="command-line">
            <span class="prompt">$</span>
            <span class="command">caro "find python files modified last week"</span>
          </div>
          <div class="output-line">
            <span class="caro-prefix">üêï Caro:</span>
            <span class="result">find . -name "*.py" -type f -mtime -7</span>
          </div>
          <div class="safety-line">
            <span class="safety-check">‚úì</span>
            <span class="safety-text">Safe to run on your system</span>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  function initTerminalShowcase() {
    const examples = document.querySelectorAll('.terminal-showcase .example');
    if (examples.length === 0) return;

    let currentIndex = 0;

    function showNextExample() {
      // Hide current example
      examples[currentIndex].classList.remove('active');

      // Move to next example (loop back to start)
      currentIndex = (currentIndex + 1) % examples.length;

      // Show next example
      examples[currentIndex].classList.add('active');
    }

    // Cycle through examples every 4 seconds
    setInterval(showNextExample, 4000);
  }

  // Initialize on page load
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initTerminalShowcase);
  } else {
    initTerminalShowcase();
  }
</script>

<style>
  .terminal-showcase {
    display: flex;
    justify-content: center;
    align-items: center;
    margin-top: 40px;
    opacity: 0;
    animation: fadeInUp 0.6s ease-out forwards;
    animation-delay: 0.3s;
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .terminal-window {
    background: #1e1e1e;
    border-radius: 12px;
    box-shadow: 0 10px 40px rgba(0, 0, 0, 0.3);
    overflow: hidden;
    width: 100%;
    max-width: 600px;
    border: 1px solid rgba(255, 255, 255, 0.1);
    transition: transform 0.2s ease, box-shadow 0.2s ease;
  }

  .terminal-window:hover {
    transform: translateY(-2px);
    box-shadow: 0 15px 50px rgba(0, 0, 0, 0.4);
  }

  .terminal-header {
    background: #2d2d2d;
    padding: 12px 16px;
    display: flex;
    align-items: center;
    gap: 12px;
    border-bottom: 1px solid rgba(255, 255, 255, 0.05);
  }

  .terminal-dots {
    display: flex;
    gap: 8px;
  }

  .dot {
    width: 12px;
    height: 12px;
    border-radius: 50%;
    opacity: 0.9;
  }

  .dot.red {
    background: #ff5f56;
  }

  .dot.yellow {
    background: #ffbd2e;
  }

  .dot.green {
    background: #27c93f;
  }

  .terminal-title {
    font-family: 'Monaco', 'Menlo', 'Courier New', monospace;
    font-size: 13px;
    color: rgba(255, 255, 255, 0.5);
    flex: 1;
    text-align: center;
    font-weight: 500;
  }

  .terminal-body {
    padding: 20px;
    font-family: 'Monaco', 'Menlo', 'Courier New', monospace;
    font-size: 14px;
    line-height: 1.6;
    min-height: 110px;
    position: relative;
  }

  .command-examples {
    position: relative;
  }

  .example {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    opacity: 0;
    transition: opacity 0.5s ease-in-out;
    pointer-events: none;
  }

  .example.active {
    opacity: 1;
    pointer-events: auto;
    position: relative;
  }

  .command-line {
    margin-bottom: 10px;
    display: flex;
    align-items: flex-start;
    gap: 8px;
  }

  .prompt {
    color: #4ec9b0;
    font-weight: 600;
    flex-shrink: 0;
  }

  .command {
    color: #9cdcfe;
    word-break: break-word;
  }

  .output-line {
    margin-bottom: 6px;
    display: flex;
    align-items: flex-start;
    gap: 8px;
  }

  .caro-prefix {
    color: #ff8c42;
    font-weight: 600;
    flex-shrink: 0;
  }

  .result {
    color: #ce9178;
    word-break: break-word;
  }

  .safety-line {
    display: flex;
    align-items: center;
    gap: 6px;
  }

  .safety-check {
    color: #6a9955;
    font-weight: 600;
  }

  .safety-text {
    color: #6a9955;
    font-size: 13px;
  }

  /* Mobile responsiveness */
  @media (max-width: 768px) {
    .terminal-showcase {
      margin-top: 30px;
    }

    .terminal-window {
      max-width: 100%;
      border-radius: 8px;
    }

    .terminal-body {
      padding: 16px;
      font-size: 12px;
      min-height: 95px;
    }

    .terminal-title {
      font-size: 11px;
    }

    .dot {
      width: 10px;
      height: 10px;
    }

    .safety-text {
      font-size: 11px;
    }
  }

  @media (max-width: 480px) {
    .terminal-body {
      padding: 14px;
      font-size: 11px;
      line-height: 1.5;
      min-height: 85px;
    }

    .terminal-header {
      padding: 10px 12px;
    }

    .terminal-title {
      font-size: 10px;
    }

    .safety-text {
      font-size: 10px;
    }
  }
</style>
