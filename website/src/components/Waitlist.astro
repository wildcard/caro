---
import { db, Waitlist, WaitlistStats, count } from 'astro:db';

// Get current waitlist count
let waitlistCount = 247; // Default starting count

try {
  const stats = await db.select().from(WaitlistStats).limit(1);
  if (stats.length > 0) {
    waitlistCount = stats[0].totalCount;
  } else {
    // Fallback: count actual signups + baseline
    const signupCount = await db.select({ count: count() }).from(Waitlist);
    waitlistCount = 247 + (signupCount[0]?.count || 0);
  }
} catch (e) {
  // In case of error, use default
  console.error('Error fetching waitlist count:', e);
}
