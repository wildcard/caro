---
// Classic Card variation - Traditional card-based layout with hover effects
interface Props {
  posts: Array<{
    title: string;
    slug: string;
    date: string;
    excerpt: string;
    readTime: string;
  }>;
}

const { posts } = Astro.props;
---

<div class="blog-grid">
  {posts.map(post => (
    <article class="blog-card">
      <div class="blog-card-header">
        <time datetime={post.date} class="blog-date">
          {new Date(post.date).toLocaleDateString('en-US', {
            year: 'numeric',
            month: 'long',
            day: 'numeric'
          })}
        </time>
        <span class="blog-read-time">{post.readTime}</span>
      </div>

      <h3 class="blog-title">
        <a href={`/blog/${post.slug}`}>{post.title}</a>
      </h3>

      <p class="blog-excerpt">{post.excerpt}</p>

      <a href={`/blog/${post.slug}`} class="blog-read-more">
        Read full story â†’
      </a>
    </article>
  ))}
</div>

<style>
  .blog-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
    gap: 30px;
    margin-top: 40px;
  }

  .blog-card {
    background: var(--color-bg);
    border-radius: 12px;
    padding: 30px;
    border: 1px solid var(--color-border);
    transition: transform 0.2s, box-shadow 0.2s, background-color 0.3s, border-color 0.3s;
    display: flex;
    flex-direction: column;
  }

  .blog-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 10px 30px rgba(255, 140, 66, 0.15);
    border-color: #ff8c42;
  }

  .blog-card-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 15px;
    font-size: 14px;
    color: var(--color-text-secondary);
  }

  .blog-date {
    font-weight: 500;
  }

  .blog-read-time {
    color: var(--color-links-muted);
  }

  .blog-title {
    font-size: 24px;
    margin-bottom: 15px;
    line-height: 1.3;
  }

  .blog-title a {
    color: var(--color-text);
    text-decoration: none;
    transition: color 0.2s;
  }

  .blog-title a:hover {
    color: #ff8c42;
  }

  .blog-excerpt {
    color: var(--color-text-secondary);
    line-height: 1.7;
    margin-bottom: 20px;
    flex-grow: 1;
  }

  .blog-read-more {
    color: #ff8c42;
    text-decoration: none;
    font-weight: 600;
    display: inline-flex;
    align-items: center;
    transition: transform 0.2s;
  }

  .blog-read-more:hover {
    transform: translateX(4px);
  }

  @media (max-width: 768px) {
    .blog-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
