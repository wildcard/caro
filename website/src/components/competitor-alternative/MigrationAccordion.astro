---
/**
 * MigrationAccordion Component
 *
 * Step-by-step migration guide with accordion interface,
 * code snippets, and common gotchas section.
 */

import type { MigrationStep, MigrationGotcha } from '../../types/competitor-alternative';

interface Props {
  title: string;
  timeEstimate: string;
  steps: MigrationStep[];
  gotchas?: MigrationGotcha[];
  checklistCta?: {
    text: string;
    href: string;
  };
  fullGuideUrl?: string;
}

const {
  title,
  timeEstimate,
  steps,
  gotchas = [],
  checklistCta,
  fullGuideUrl
} = Astro.props;
---

<section class="migration-section">
  <div class="container">
    <div class="section-header">
      <span class="time-badge">{timeEstimate}</span>
      <h2>{title}</h2>
      <p class="section-subtitle">
        Get started quickly with our step-by-step migration guide
      </p>
    </div>

    <div class="migration-content">
      <!-- Steps Accordion -->
      <div class="steps-accordion">
        {steps.map((step, index) => (
          <details class="step-accordion" open={index === 0}>
            <summary class="step-header">
              <span class="step-number">{step.step}</span>
              <span class="step-title">{step.title}</span>
              <span class="accordion-icon">+</span>
            </summary>
            <div class="step-content">
              <div class="step-description" set:html={step.content} />

              {step.items && step.items.length > 0 && (
                <ul class="step-items">
                  {step.items.map((item) => (
                    <li>{item}</li>
                  ))}
                </ul>
              )}

              {step.code && (
                <div class="code-block">
                  <div class="code-header">
                    <span>Terminal</span>
                    <button class="copy-btn" data-code={step.code}>Copy</button>
                  </div>
                  <pre><code>{step.code}</code></pre>
                </div>
              )}

              {step.docsUrl && (
                <a href={step.docsUrl} class="docs-link">
                  View detailed documentation &rarr;
                </a>
              )}
            </div>
          </details>
        ))}
      </div>

      <!-- Common Gotchas -->
      {gotchas.length > 0 && (
        <div class="gotchas-section">
          <h3>Common Gotchas</h3>
          <div class="gotchas-grid">
            {gotchas.map((gotcha) => (
              <div class="gotcha-card">
                <div class="gotcha-header">
                  <span class="gotcha-icon">⚠️</span>
                  <h4>{gotcha.title}</h4>
                </div>
                <p class="gotcha-description">{gotcha.description}</p>
                <div class="gotcha-solution">
                  <span class="solution-label">Solution:</span>
                  <p>{gotcha.solution}</p>
                </div>
              </div>
            ))}
          </div>
        </div>
      )}

      <!-- CTAs -->
      <div class="migration-ctas">
        {checklistCta && (
          <a href={checklistCta.href} class="cta-button primary" data-tracking="migration_checklist">
            {checklistCta.text}
          </a>
        )}
        {fullGuideUrl && (
          <a href={fullGuideUrl} class="cta-button secondary">
            Full Migration Guide &rarr;
          </a>
        )}
      </div>
    </div>
  </div>
</section>

<style>
  .migration-section {
    padding: 80px 20px;
    background: var(--color-bg-secondary);
  }

  .container {
    max-width: 900px;
    margin: 0 auto;
  }

  .section-header {
    text-align: center;
    margin-bottom: 48px;
  }

  .time-badge {
    display: inline-block;
    padding: 6px 16px;
    background: linear-gradient(135deg, #ff8c42 0%, #ff6b35 100%);
    color: white;
    border-radius: 20px;
    font-size: 14px;
    font-weight: 600;
    margin-bottom: 16px;
  }

  h2 {
    font-size: 32px;
    color: var(--color-text);
    margin-bottom: 12px;
  }

  .section-subtitle {
    color: var(--color-text-secondary);
    font-size: 18px;
  }

  /* Steps Accordion */
  .steps-accordion {
    display: flex;
    flex-direction: column;
    gap: 12px;
    margin-bottom: 48px;
  }

  .step-accordion {
    border: 1px solid var(--color-border);
    border-radius: 12px;
    overflow: hidden;
    background: var(--color-bg);
    transition: box-shadow 0.2s;
  }

  .step-accordion[open] {
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
  }

  .step-header {
    display: flex;
    align-items: center;
    padding: 20px;
    cursor: pointer;
    list-style: none;
    gap: 16px;
  }

  .step-header::-webkit-details-marker {
    display: none;
  }

  .step-number {
    width: 32px;
    height: 32px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, #ff8c42 0%, #ff6b35 100%);
    color: white;
    border-radius: 50%;
    font-weight: 600;
    font-size: 14px;
    flex-shrink: 0;
  }

  .step-title {
    flex: 1;
    font-weight: 600;
    color: var(--color-text);
    font-size: 16px;
  }

  .accordion-icon {
    font-size: 24px;
    color: var(--color-text-secondary);
    transition: transform 0.2s;
    line-height: 1;
  }

  .step-accordion[open] .accordion-icon {
    transform: rotate(45deg);
  }

  .step-content {
    padding: 0 20px 24px 68px;
    border-top: 1px solid var(--color-border);
    margin-top: -1px;
  }

  .step-description {
    color: var(--color-text-secondary);
    line-height: 1.7;
    margin-top: 16px;
  }

  .step-description :global(p) {
    margin-bottom: 12px;
  }

  .step-description :global(strong) {
    color: var(--color-text);
  }

  .step-description :global(code) {
    background: var(--color-bg-secondary);
    padding: 2px 6px;
    border-radius: 4px;
    font-size: 13px;
    font-family: 'JetBrains Mono', 'Fira Code', monospace;
  }

  .step-items {
    list-style: none;
    padding: 0;
    margin: 16px 0;
  }

  .step-items li {
    padding: 8px 0 8px 24px;
    position: relative;
    color: var(--color-text-secondary);
  }

  .step-items li::before {
    content: '→';
    position: absolute;
    left: 0;
    color: #ff8c42;
    font-weight: bold;
  }

  /* Code Block */
  .code-block {
    margin: 16px 0;
    border-radius: 8px;
    overflow: hidden;
    border: 1px solid var(--color-border);
  }

  .code-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 8px 16px;
    background: var(--color-bg-tertiary);
    border-bottom: 1px solid var(--color-border);
  }

  .code-header span {
    font-size: 12px;
    color: var(--color-text-secondary);
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .copy-btn {
    background: transparent;
    border: 1px solid var(--color-border);
    padding: 4px 12px;
    border-radius: 4px;
    font-size: 12px;
    color: var(--color-text-secondary);
    cursor: pointer;
    transition: all 0.2s;
  }

  .copy-btn:hover {
    background: var(--color-bg-secondary);
    color: var(--color-text);
  }

  .copy-btn.copied {
    background: rgba(34, 197, 94, 0.1);
    color: #16a34a;
    border-color: #16a34a;
  }

  .code-block pre {
    margin: 0;
    padding: 16px;
    background: var(--color-bg);
    overflow-x: auto;
  }

  .code-block code {
    font-family: 'JetBrains Mono', 'Fira Code', monospace;
    font-size: 13px;
    color: var(--color-text);
    line-height: 1.6;
  }

  .docs-link {
    display: inline-block;
    margin-top: 12px;
    color: #ff8c42;
    font-size: 14px;
    text-decoration: none;
    font-weight: 500;
  }

  .docs-link:hover {
    text-decoration: underline;
  }

  /* Gotchas Section */
  .gotchas-section {
    margin-bottom: 48px;
  }

  .gotchas-section h3 {
    font-size: 20px;
    color: var(--color-text);
    margin-bottom: 20px;
  }

  .gotchas-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 16px;
  }

  .gotcha-card {
    padding: 20px;
    background: var(--color-bg);
    border: 1px solid var(--color-border);
    border-radius: 12px;
    border-left: 4px solid #f59e0b;
  }

  .gotcha-header {
    display: flex;
    align-items: center;
    gap: 8px;
    margin-bottom: 12px;
  }

  .gotcha-icon {
    font-size: 18px;
  }

  .gotcha-header h4 {
    font-size: 15px;
    color: var(--color-text);
    margin: 0;
  }

  .gotcha-description {
    font-size: 14px;
    color: var(--color-text-secondary);
    line-height: 1.6;
    margin-bottom: 12px;
  }

  .gotcha-solution {
    padding: 12px;
    background: rgba(34, 197, 94, 0.08);
    border-radius: 8px;
  }

  .solution-label {
    display: block;
    font-size: 12px;
    font-weight: 600;
    color: #16a34a;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    margin-bottom: 4px;
  }

  .gotcha-solution p {
    font-size: 13px;
    color: var(--color-text);
    margin: 0;
    line-height: 1.5;
  }

  /* CTAs */
  .migration-ctas {
    display: flex;
    gap: 16px;
    justify-content: center;
    flex-wrap: wrap;
  }

  .cta-button {
    display: inline-block;
    padding: 14px 28px;
    border-radius: 8px;
    font-weight: 600;
    font-size: 16px;
    text-decoration: none;
    transition: all 0.2s;
  }

  .cta-button.primary {
    background: linear-gradient(135deg, #ff8c42 0%, #ff6b35 100%);
    color: white;
  }

  .cta-button.primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 20px rgba(255, 140, 66, 0.3);
  }

  .cta-button.secondary {
    background: transparent;
    color: #ff8c42;
    border: 2px solid #ff8c42;
  }

  .cta-button.secondary:hover {
    background: rgba(255, 140, 66, 0.1);
  }

  @media (max-width: 768px) {
    h2 {
      font-size: 24px;
    }

    .step-content {
      padding-left: 20px;
    }

    .migration-ctas {
      flex-direction: column;
      align-items: stretch;
    }

    .cta-button {
      text-align: center;
    }
  }
</style>

<script>
  // Copy button functionality
  document.querySelectorAll('.copy-btn').forEach((btn) => {
    btn.addEventListener('click', async () => {
      const code = btn.getAttribute('data-code');
      if (code) {
        try {
          await navigator.clipboard.writeText(code);
          btn.textContent = 'Copied!';
          btn.classList.add('copied');
          setTimeout(() => {
            btn.textContent = 'Copy';
            btn.classList.remove('copied');
          }, 2000);
        } catch (err) {
          console.error('Failed to copy:', err);
        }
      }
    });
  });

  // Track migration checklist clicks
  document.querySelectorAll('[data-tracking="migration_checklist"]').forEach((link) => {
    link.addEventListener('click', () => {
      if (typeof window !== 'undefined' && (window as any).posthog) {
        (window as any).posthog.capture('migration_checklist_click');
      }
    });
  });
</script>
