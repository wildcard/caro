---
/**
 * SolutionSection Component
 *
 * Presents core differentiators and capabilities
 * with visual blocks showing concrete, measurable claims.
 */

import type { Capability } from '../../types/competitor-alternative';

interface Props {
  title: string;
  subtitle?: string;
  capabilities: Capability[];
}

const { title, subtitle, capabilities } = Astro.props;
---

<section class="solution-section">
  <div class="container">
    <header class="section-header">
      <h2>{title}</h2>
      {subtitle && <p class="section-subtitle">{subtitle}</p>}
    </header>

    <div class="capabilities-grid">
      {capabilities.map((cap) => (
        <article class="capability-card">
          {cap.image && (
            <div class="capability-image">
              <img src={cap.image} alt={cap.title} loading="lazy" />
            </div>
          )}
          <div class="capability-content">
            <div class="capability-icon">{cap.icon}</div>
            <h3>{cap.title}</h3>
            <ul class="capability-bullets">
              {cap.bullets.map((bullet) => (
                <li>{bullet}</li>
              ))}
            </ul>
            {cap.learnMoreUrl && (
              <a href={cap.learnMoreUrl} class="learn-more">
                Learn more &rarr;
              </a>
            )}
          </div>
        </article>
      ))}
    </div>
  </div>
</section>

<style>
  .solution-section {
    padding: 80px 20px;
    background: var(--color-bg);
  }

  .container {
    max-width: 1100px;
    margin: 0 auto;
  }

  .section-header {
    text-align: center;
    margin-bottom: 48px;
  }

  h2 {
    font-size: 32px;
    color: var(--color-text);
    margin-bottom: 12px;
  }

  .section-subtitle {
    font-size: 18px;
    color: var(--color-text-secondary);
    max-width: 600px;
    margin: 0 auto;
    line-height: 1.6;
  }

  .capabilities-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 24px;
  }

  .capability-card {
    background: var(--color-bg);
    border: 1px solid var(--color-border);
    border-radius: 16px;
    overflow: hidden;
    transition: transform 0.2s, box-shadow 0.2s;
  }

  .capability-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 12px 40px rgba(0, 0, 0, 0.1);
  }

  .capability-image {
    width: 100%;
    height: 160px;
    overflow: hidden;
    background: var(--color-bg-secondary);
  }

  .capability-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .capability-content {
    padding: 24px;
  }

  .capability-icon {
    font-size: 32px;
    margin-bottom: 12px;
  }

  h3 {
    font-size: 18px;
    font-weight: 600;
    color: var(--color-text);
    margin-bottom: 16px;
  }

  .capability-bullets {
    list-style: none;
    padding: 0;
    margin: 0 0 16px 0;
  }

  .capability-bullets li {
    position: relative;
    padding-left: 20px;
    margin-bottom: 10px;
    font-size: 14px;
    color: var(--color-text-secondary);
    line-height: 1.6;
  }

  .capability-bullets li::before {
    content: 'âœ“';
    position: absolute;
    left: 0;
    color: #22c55e;
    font-weight: bold;
  }

  .learn-more {
    display: inline-block;
    color: #ff8c42;
    font-size: 14px;
    font-weight: 500;
    text-decoration: none;
  }

  .learn-more:hover {
    text-decoration: underline;
  }

  @media (max-width: 768px) {
    h2 {
      font-size: 24px;
    }

    .section-subtitle {
      font-size: 16px;
    }

    .capabilities-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
