---
/**
 * ComingSoonBadge Component
 * Visual indicator for planned features not yet implemented
 */

interface Props {
  feature: string;
  issueUrl?: string;
  description?: string;
}

const { feature, issueUrl, description } = Astro.props;
---

{issueUrl ? (
  <a
    href={issueUrl}
    class="coming-soon-badge"
    target="_blank"
    rel="noopener noreferrer"
    title={description || `${feature} is coming soon`}
    aria-label={`${feature} is coming soon. Click to view GitHub issue.`}
  >
    <span class="badge-icon">ðŸš§</span>
    <span class="badge-text">Coming Soon</span>
    <svg class="external-icon" width="12" height="12" viewBox="0 0 12 12" fill="none">
      <path d="M10 4L10 2L8 2" stroke="currentColor" stroke-width="1.5" stroke-linecap="round"/>
      <path d="M6 6L9.5 2.5" stroke="currentColor" stroke-width="1.5" stroke-linecap="round"/>
      <path d="M8 7V10H2V4H5" stroke="currentColor" stroke-width="1.5" stroke-linecap="round"/>
    </svg>
  </a>
) : (
  <span
    class="coming-soon-badge badge-static"
    title={description || `${feature} is coming soon`}
    aria-label={`${feature} is coming soon`}
  >
    <span class="badge-icon">ðŸš§</span>
    <span class="badge-text">Coming Soon</span>
  </span>
)}

{description && (
  <div class="badge-tooltip">{description}</div>
)}

<style>
  .coming-soon-badge {
    display: inline-flex;
    align-items: center;
    gap: 0.375rem;
    padding: 0.25rem 0.75rem;
    background: linear-gradient(135deg, #ffa500 0%, #ff8c00 100%);
    color: white;
    border-radius: 12px;
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    text-decoration: none;
    transition: all 0.2s ease;
    white-space: nowrap;
    cursor: pointer;
  }

  .coming-soon-badge:hover {
    background: linear-gradient(135deg, #ff8c00 0%, #ff6b00 100%);
    transform: translateY(-1px);
    box-shadow: 0 2px 8px rgba(255, 140, 0, 0.3);
  }

  .badge-static {
    cursor: default;
  }

  .badge-static:hover {
    transform: none;
    box-shadow: none;
  }

  .badge-icon {
    font-size: 0.875rem;
    line-height: 1;
  }

  .badge-text {
    font-size: 0.6875rem;
    letter-spacing: 0.025em;
  }

  .external-icon {
    opacity: 0.9;
  }

  .badge-tooltip {
    display: none;
    position: absolute;
    bottom: 100%;
    left: 50%;
    transform: translateX(-50%);
    margin-bottom: 0.5rem;
    padding: 0.5rem 0.75rem;
    background: var(--color-bg-tooltip, #24292f);
    color: white;
    border-radius: 6px;
    font-size: 0.8125rem;
    white-space: nowrap;
    z-index: 10;
    pointer-events: none;
  }

  .coming-soon-badge:hover + .badge-tooltip {
    display: block;
  }

  .badge-tooltip::after {
    content: '';
    position: absolute;
    top: 100%;
    left: 50%;
    transform: translateX(-50%);
    border: 4px solid transparent;
    border-top-color: var(--color-bg-tooltip, #24292f);
  }

  /* Animation for badge */
  @keyframes pulse {
    0%, 100% {
      opacity: 1;
    }
    50% {
      opacity: 0.8;
    }
  }

  .coming-soon-badge {
    animation: pulse 2s ease-in-out infinite;
  }

  .coming-soon-badge:hover {
    animation: none;
  }

  /* Dark mode - adjust for better contrast */
  @media (prefers-color-scheme: dark) {
    .badge-tooltip {
      background: var(--color-bg-tooltip, #f6f8fa);
      color: var(--color-text, #24292f);
    }

    .badge-tooltip::after {
      border-top-color: var(--color-bg-tooltip, #f6f8fa);
    }
  }

  /* Mobile - adjust font sizes */
  @media (max-width: 768px) {
    .coming-soon-badge {
      padding: 0.1875rem 0.625rem;
      font-size: 0.6875rem;
    }

    .badge-icon {
      font-size: 0.8125rem;
    }
  }
</style>
