<style>
  .community {
    padding: 100px 24px;
    background: var(--color-bg-secondary);
  }

  .container {
    max-width: 1100px;
    margin: 0 auto;
  }

  .section-label {
    text-align: center;
    font-size: 14px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 2px;
    color: #8b5cf6;
    margin-bottom: 16px;
  }

  h2 {
    text-align: center;
    font-size: 42px;
    font-weight: 800;
    color: var(--color-text);
    margin-bottom: 16px;
  }

  .section-subtitle {
    text-align: center;
    font-size: 20px;
    color: var(--color-text-secondary);
    max-width: 600px;
    margin: 0 auto 60px;
  }

  /* Stats */
  .community-stats {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 24px;
    margin-bottom: 60px;
  }

  .stat-card {
    background: var(--color-bg);
    border: 1px solid var(--color-border);
    border-radius: 16px;
    padding: 32px;
    text-align: center;
    transition: border-color 0.2s, transform 0.2s;
  }

  .stat-card:hover {
    border-color: #ff8c42;
    transform: translateY(-4px);
  }

  .stat-icon {
    font-size: 32px;
    margin-bottom: 16px;
    color: var(--color-text-secondary);
  }

  .stat-value {
    font-size: 36px;
    font-weight: 800;
    color: var(--color-text);
    margin-bottom: 8px;
  }

  .stat-label {
    font-size: 14px;
    color: var(--color-text-secondary);
  }

  /* Testimonials */
  .testimonials {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 24px;
    margin-bottom: 60px;
  }

  .testimonial {
    background: var(--color-bg);
    border: 1px solid var(--color-border);
    border-radius: 16px;
    padding: 28px;
  }

  .testimonial-content {
    font-size: 16px;
    line-height: 1.7;
    color: var(--color-text);
    margin-bottom: 20px;
    font-style: italic;
  }

  .testimonial-author {
    display: flex;
    align-items: center;
    gap: 12px;
  }

  .author-avatar {
    width: 40px;
    height: 40px;
    background: linear-gradient(135deg, #ff8c42 0%, #ff6b35 100%);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-weight: 700;
    font-size: 16px;
  }

  .author-name {
    font-weight: 600;
    color: var(--color-text);
    font-size: 15px;
  }

  .author-role {
    font-size: 13px;
    color: var(--color-text-secondary);
  }

  /* Join Section */
  .join-section {
    text-align: center;
  }

  .join-section h3 {
    font-size: 24px;
    font-weight: 700;
    color: var(--color-text);
    margin-bottom: 24px;
  }

  .join-options {
    display: flex;
    gap: 16px;
    justify-content: center;
    flex-wrap: wrap;
  }

  .join-option {
    display: flex;
    align-items: center;
    gap: 10px;
    background: var(--color-bg);
    border: 1px solid var(--color-border);
    padding: 14px 24px;
    border-radius: 10px;
    text-decoration: none;
    color: var(--color-text);
    font-weight: 500;
    transition: border-color 0.2s, background 0.2s;
  }

  .join-option:hover {
    border-color: #ff8c42;
    background: rgba(255, 140, 66, 0.05);
  }

  @media (max-width: 900px) {
    .community-stats {
      grid-template-columns: repeat(2, 1fr);
    }

    .testimonials {
      grid-template-columns: 1fr;
    }
  }

  @media (max-width: 768px) {
    h2 {
      font-size: 28px;
    }

    .community-stats {
      grid-template-columns: repeat(2, 1fr);
      gap: 16px;
    }

    .stat-card {
      padding: 24px;
    }

    .stat-value {
      font-size: 28px;
    }

    .join-options {
      flex-direction: column;
      align-items: center;
    }

    .join-option {
      width: 100%;
      max-width: 280px;
      justify-content: center;
    }
  }
</style>

<script>
  // Fetch GitHub stats
  async function fetchGitHubStats() {
    try {
      const response = await fetch('https://api.github.com/repos/wildcard/caro');
      const data = await response.json();

      const stars = document.getElementById('stat-stars');
      const forks = document.getElementById('stat-forks');

      if (stars && data.stargazers_count) {
        stars.textContent = data.stargazers_count.toLocaleString();
      }
      if (forks && data.forks_count) {
        forks.textContent = data.forks_count.toLocaleString();
      }

      // Fetch contributors
      const contribResponse = await fetch('https://api.github.com/repos/wildcard/caro/contributors?per_page=1');
      const linkHeader = contribResponse.headers.get('Link');
      if (linkHeader) {
        const match = linkHeader.match(/page=(\d+)>; rel="last"/);
        if (match) {
          const contributors = document.getElementById('stat-contributors');
          if (contributors) contributors.textContent = match[1];
        }
      }
    } catch (e) {
      // Keep placeholder values
    }

    // Set downloads to crates.io placeholder
    const downloads = document.getElementById('stat-downloads');
    if (downloads) downloads.textContent = '1K+';
  }

  fetchGitHubStats();
</script>
