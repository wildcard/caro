    </div>
  </div>

  <!-- Gradient Orbs (decorative) -->
  <div class="orb orb-1"></div>
  <div class="orb orb-2"></div>
</section>

<style>
  .hero {
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 120px 24px 80px;
    position: relative;
    overflow: hidden;
    background: var(--color-bg);
  }

  .container {
    max-width: 900px;
    text-align: center;
    position: relative;
    z-index: 1;
  }

  .oss-badge {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    background: linear-gradient(135deg, rgba(34, 197, 94, 0.1) 0%, rgba(34, 197, 94, 0.05) 100%);
    border: 1px solid rgba(34, 197, 94, 0.3);
    color: #22c55e;
    padding: 8px 20px;
    border-radius: 24px;
    font-size: 14px;
    font-weight: 600;
    margin-bottom: 32px;
  }

  .badge-icon {
    display: flex;
    align-items: center;
  }

  .separator {
    opacity: 0.4;
  }

  .headline {
    font-size: 56px;
    font-weight: 800;
    line-height: 1.15;
    margin-bottom: 24px;
    color: var(--color-text);
    letter-spacing: -0.02em;
  }

  .highlight {
    background: linear-gradient(135deg, #ff8c42 0%, #ff6b35 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .subline {
    color: var(--color-text-secondary);
    font-weight: 600;
  }

  .description {
    font-size: 20px;
    line-height: 1.7;
    color: var(--color-text-secondary);
    max-width: 700px;
    margin: 0 auto 40px;
  }

  .stats-bar {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0;
    background: var(--color-bg-secondary);
    border: 1px solid var(--color-border);
    border-radius: 16px;
    padding: 20px 40px;
    margin-bottom: 40px;
    flex-wrap: wrap;
  }

  .stat {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 0 32px;
  }

  .stat-value {
    font-size: 28px;
    font-weight: 700;
    color: var(--color-text);
  }

  .stat-label {
    font-size: 13px;
    color: var(--color-text-secondary);
    margin-top: 4px;
  }

  .stat-divider {
    width: 1px;
    height: 40px;
    background: var(--color-border);
  }

  .cta-group {
    display: flex;
    gap: 16px;
    justify-content: center;
    margin-bottom: 48px;
    flex-wrap: wrap;
  }

  .cta {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 16px 32px;
    border-radius: 12px;
    font-size: 17px;
    font-weight: 600;
    text-decoration: none;
    transition: all 0.2s;
  }

  .cta.primary {
    background: linear-gradient(135deg, #ff8c42 0%, #ff6b35 100%);
    color: white;
    box-shadow: 0 4px 20px rgba(255, 140, 66, 0.3);
  }

  .cta.primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 30px rgba(255, 140, 66, 0.4);
  }

  .cta.secondary {
    background: var(--color-bg);
    border: 2px solid var(--color-border);
    color: var(--color-text);
  }

  .cta.secondary:hover {
    border-color: #ff8c42;
    background: rgba(255, 140, 66, 0.05);
  }

  .trust-row {
    display: flex;
    gap: 32px;
    justify-content: center;
    flex-wrap: wrap;
  }

  .trust-item {
    display: flex;
    align-items: center;
    gap: 8px;
    font-size: 14px;
    color: var(--color-text-secondary);
  }

  .trust-icon {
    font-size: 18px;
  }

  /* Decorative orbs */
  .orb {
    position: absolute;
    border-radius: 50%;
    filter: blur(80px);
    opacity: 0.4;
    pointer-events: none;
  }

  .orb-1 {
    width: 400px;
    height: 400px;
    background: linear-gradient(135deg, #ff8c42 0%, #ff6b35 100%);
    top: -100px;
    right: -100px;
  }

  .orb-2 {
    width: 300px;
    height: 300px;
    background: linear-gradient(135deg, #22c55e 0%, #16a34a 100%);
    bottom: -50px;
    left: -100px;
  }

  :global(.dark) .orb {
    opacity: 0.2;
  }

  @media (max-width: 768px) {
    .hero {
      padding: 100px 20px 60px;
    }

    .headline {
      font-size: 36px;
    }

    .description {
      font-size: 17px;
    }

    .stats-bar {
      flex-direction: column;
      gap: 20px;
      padding: 24px;
    }

    .stat-divider {
      width: 60px;
      height: 1px;
    }

    .stat {
      padding: 0;
    }

    .cta-group {
      flex-direction: column;
      align-items: center;
    }

    .cta {
      width: 100%;
      max-width: 280px;
      justify-content: center;
    }

    .trust-row {
      flex-direction: column;
      gap: 16px;
    }
  }
</style>

<script>
  // Fetch GitHub stars
  async function fetchStars() {
    try {
      const response = await fetch('https://api.github.com/repos/wildcard/caro');
      const data = await response.json();
      const el = document.getElementById('github-stars');
      if (el && data.stargazers_count) {
        el.textContent = data.stargazers_count.toLocaleString();
      }
    } catch (e) {
      const el = document.getElementById('github-stars');
      if (el) el.textContent = '‚òÖ';
    }
  }
  fetchStars();
</script>
