          </svg>
          <span>View Source on GitHub</span>
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M5 12h14M12 5l7 7-7 7"/>
          </svg>
        </a>
      </div>

      <div class="content-right">
        <div class="code-preview">
          <div class="code-header">
            <span class="code-file">src/safety/patterns.rs</span>
            <span class="code-badge">Rust</span>
          </div>
          <pre class="code-content"><code><span class="comment">// Example safety patterns - you can audit every one</span>
<span class="keyword">const</span> <span class="variable">DANGEROUS_PATTERNS</span>: &[&<span class="type">str</span>] = &[
    <span class="string">r"rm\s+(-[rf]+\s+)*/"</span>,           <span class="comment">// Root delete</span>
    <span class="string">r"rm\s+(-[rf]+\s+)*~"</span>,           <span class="comment">// Home delete</span>
    <span class="string">r":\(\)\s*\{\s*:\|:&\s*\}"</span>,      <span class="comment">// Fork bomb</span>
    <span class="string">r"dd\s+if=/dev/zero"</span>,            <span class="comment">// Disk wipe</span>
    <span class="string">r"mkfs\."</span>,                        <span class="comment">// Format disk</span>
    <span class="string">r"chmod\s+(-R\s+)?777\s+/"</span>,      <span class="comment">// Perm disaster</span>
    <span class="comment">// ... 46 more patterns</span>
];

<span class="keyword">pub fn</span> <span class="function">validate</span>(cmd: &<span class="type">str</span>) -> <span class="type">SafetyResult</span> {
    <span class="keyword">for</span> pattern <span class="keyword">in</span> DANGEROUS_PATTERNS {
        <span class="keyword">if</span> Regex::new(pattern)?.is_match(cmd) {
            <span class="keyword">return</span> <span class="type">SafetyResult</span>::Blocked(pattern);
        }
    }
    <span class="type">SafetyResult</span>::Safe
}</code></pre>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .opensource {
    padding: 100px 24px;
    background: var(--color-bg);
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
  }

  .content-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 60px;
    align-items: center;
  }

  .section-label {
    font-size: 14px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 2px;
    color: #22c55e;
    margin-bottom: 16px;
  }

  h2 {
    font-size: 42px;
    font-weight: 800;
    line-height: 1.2;
    color: var(--color-text);
    margin-bottom: 20px;
  }

  .description {
    font-size: 18px;
    line-height: 1.7;
    color: var(--color-text-secondary);
    margin-bottom: 40px;
  }

  .benefits {
    display: flex;
    flex-direction: column;
    gap: 24px;
    margin-bottom: 40px;
  }

  .benefit {
    display: flex;
    gap: 16px;
  }

  .benefit-icon {
    font-size: 28px;
    flex-shrink: 0;
  }

  .benefit h4 {
    font-size: 18px;
    font-weight: 600;
    color: var(--color-text);
    margin-bottom: 6px;
  }

  .benefit p {
    font-size: 15px;
    color: var(--color-text-secondary);
    line-height: 1.6;
  }

  .github-cta {
    display: inline-flex;
    align-items: center;
    gap: 10px;
    background: #24292e;
    color: white;
    padding: 14px 28px;
    border-radius: 10px;
    text-decoration: none;
    font-weight: 600;
    transition: background 0.2s;
  }

  .github-cta:hover {
    background: #1a1e22;
  }

  /* Code Preview */
  .code-preview {
    background: #0d1117;
    border-radius: 16px;
    overflow: hidden;
    box-shadow: 0 25px 80px rgba(0, 0, 0, 0.3);
  }

  .code-header {
    background: #161b22;
    padding: 14px 20px;
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  .code-file {
    font-family: 'SF Mono', 'Monaco', 'Fira Code', monospace;
    font-size: 13px;
    color: #8b949e;
  }

  .code-badge {
    background: #f97316;
    color: white;
    padding: 4px 10px;
    border-radius: 4px;
    font-size: 11px;
    font-weight: 600;
    text-transform: uppercase;
  }

  .code-content {
    padding: 24px;
    margin: 0;
    font-family: 'SF Mono', 'Monaco', 'Fira Code', monospace;
    font-size: 13px;
    line-height: 1.8;
    color: #c9d1d9;
    overflow-x: auto;
  }

  .code-content .comment { color: #8b949e; }
  .code-content .keyword { color: #ff7b72; }
  .code-content .variable { color: #ffa657; }
  .code-content .type { color: #79c0ff; }
  .code-content .string { color: #a5d6ff; }
  .code-content .function { color: #d2a8ff; }

  @media (max-width: 900px) {
    .content-grid {
      grid-template-columns: 1fr;
      gap: 48px;
    }

    .content-right {
      order: -1;
    }
  }

  @media (max-width: 768px) {
    h2 {
      font-size: 28px;
    }

    .code-content {
      font-size: 11px;
      padding: 16px;
    }
  }
</style>
