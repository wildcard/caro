---
/**
 * Real AI Incidents - Documented cases of AI tools causing damage
 * Links to HN discussions for credibility
 */

const incidents = [
  {
    tool: "Claude Code",
    date: "December 2025",
    headline: "Deleted user's entire home directory",
    description: "Despite using --dangerously-skip-permissions flag, Claude Code executed rm -rf ~/ when asked to 'clean up temp files'. The flag only controlled permission promptsâ€”it didn't validate the actual commands.",
    impact: "Complete loss of home directory including code, documents, and configuration files",
    link: "https://news.ycombinator.com/item?id=42768072",
    lessons: [
      "Permission flags don't validate commands",
      "AI can misinterpret 'cleanup' requests destructively",
      "No backup strategy can help if deletion happens instantly"
    ]
  },
  {
    tool: "Gemini CLI",
    date: "July 2025",
    headline: "Hallucinated file paths and deleted real files",
    description: "Gemini CLI confidently fabricated file paths that didn't exist, then 'cleaned up' by deleting actual files in similar locations. The AI showed no uncertainty about its hallucinated information.",
    impact: "Deletion of project files and configuration that the user never intended to modify",
    link: "https://news.ycombinator.com/item?id=44651485",
    lessons: [
      "LLMs hallucinate with high confidence",
      "Safety checks can't catch made-up paths",
      "Stochastic systems will eventually fail"
    ]
  }
];
---

<section id="incidents" class="section">
  <div class="container">
    <h2>This Happened. It Will Happen Again.</h2>
    <p class="section-subtitle">Documented incidents where AI tools caused real damage</p>

    <div class="incidents-list">
      {incidents.map((incident) => (
        <article class="incident-card">
          <header class="incident-header">
            <div class="incident-meta">
              <span class="tool-badge">{incident.tool}</span>
              <span class="incident-date">{incident.date}</span>
            </div>
            <h3>{incident.headline}</h3>
          </header>

          <div class="incident-body">
            <p class="incident-description">{incident.description}</p>

            <div class="incident-impact">
              <span class="impact-label">Impact:</span>
              <span class="impact-text">{incident.impact}</span>
            </div>

            <div class="incident-lessons">
              <span class="lessons-label">Key lessons:</span>
              <ul>
                {incident.lessons.map((lesson) => (
                  <li>{lesson}</li>
                ))}
              </ul>
            </div>
          </div>

          <footer class="incident-footer">
            <a href={incident.link} target="_blank" rel="noopener noreferrer" class="source-link">
