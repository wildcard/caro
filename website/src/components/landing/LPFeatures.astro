---
import { t, type Locale } from '../../i18n/config';
import { translations } from '../../i18n/index';

interface Props {
  lang?: Locale;
}

const { lang = 'en' } = Astro.props;

// Load features from translation file
const features = translations[lang].landing.features.items;
---

<section id="features">
  <div class="container">
    <h2>{t(lang, 'landing.features.title')}</h2>
    <p class="section-subtitle">{t(lang, 'landing.features.subtitle')}</p>

    <div class="features">
      {features.map((feature) => (
        <div class={`feature ${feature.highlight ? 'feature-highlight' : ''}`}>
          <div class="feature-icon">{feature.icon}</div>
          <h3>{feature.title}{feature.privacyLink && <a href="/telemetry" class="privacy-asterisk">*</a>}</h3>
          <p>{feature.description}</p>
        </div>
      ))}
    </div>

    <div class="feature-cta">
      <p class="cta-text">See exactly what Caro blocks and why</p>
      <a href="#demo" class="cta-link">View safety patterns &rarr;</a>
    </div>
  </div>
</section>

<style>
  section {
    padding: 80px 20px;
    background: var(--color-bg-secondary);
  }

  .container {
    max-width: 1000px;
    margin: 0 auto;
  }

  h2 {
    font-size: 36px;
    text-align: center;
    margin-bottom: 12px;
    color: var(--color-text);
    transition: color 0.3s ease;
  }

  .section-subtitle {
    text-align: center;
    color: var(--color-text-secondary);
    font-size: 18px;
    margin-bottom: 50px;
  }

  .features {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 30px;
  }

  .feature {
    padding: 32px;
    border-radius: 12px;
    background: var(--color-bg);
    border: 1px solid var(--color-border);
    transition: transform 0.2s, box-shadow 0.2s, background 0.3s ease, border-color 0.3s ease;
  }

  .feature:hover {
    transform: translateY(-4px);
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
    border-color: #ff8c42;
  }

  :global(.dark) .feature:hover {
    box-shadow: 0 10px 30px rgba(255, 140, 66, 0.15);
  }

  .feature-highlight {
    border-color: rgba(255, 140, 66, 0.3);
    background: linear-gradient(135deg, rgba(255, 140, 66, 0.03) 0%, var(--color-bg) 100%);
  }

  .feature-icon {
    font-size: 40px;
    margin-bottom: 16px;
  }

  .feature h3 {
    font-size: 20px;
    margin-bottom: 12px;
    color: var(--color-text);
    transition: color 0.3s ease;
  }

  .feature p {
    color: var(--color-text-secondary);
    line-height: 1.7;
    font-size: 15px;
    transition: color 0.3s ease;
  }

  .feature-cta {
    text-align: center;
    margin-top: 50px;
  }

  .cta-text {
    color: var(--color-text-secondary);
    font-size: 15px;
    margin-bottom: 8px;
  }

  .cta-link {
    color: #ff8c42;
    font-weight: 600;
    text-decoration: none;
    font-size: 16px;
    transition: opacity 0.2s;
  }

  .cta-link:hover {
    opacity: 0.8;
  }

  .privacy-asterisk {
    color: #ff8c42;
    text-decoration: none;
    font-size: 0.8em;
    vertical-align: super;
  }

  .privacy-asterisk:hover {
    text-decoration: underline;
  }

  @media (max-width: 768px) {
    h2 {
      font-size: 28px;
    }

    .features {
      grid-template-columns: 1fr;
    }

    .feature {
      padding: 24px;
    }
  }
</style>
