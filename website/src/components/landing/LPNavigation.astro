      <a href="#download" class="nav-cta">Get Started</a>
    </div>

    <button class="nav-mobile-toggle" aria-label="Toggle menu">
      <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <line x1="3" y1="12" x2="21" y2="12"/>
        <line x1="3" y1="6" x2="21" y2="6"/>
        <line x1="3" y1="18" x2="21" y2="18"/>
      </svg>
    </button>
  </div>
</nav>

<div class="nav-mobile-menu">
  <a href="#features" class="mobile-link">Features</a>
  <a href="#demo" class="mobile-link">Demo</a>
  <a href="/compare" class="mobile-link">Compare</a>
  <a href="/blog" class="mobile-link">Blog</a>
  <a href="https://github.com/wildcard/caro" class="mobile-link" target="_blank">GitHub</a>
  <a href="#download" class="mobile-cta">Get Started</a>
</div>

<style>
  .nav {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 1000;
    background: rgba(10, 10, 15, 0.9);
    backdrop-filter: blur(10px);
    border-bottom: 1px solid rgba(255, 255, 255, 0.05);
  }

  .nav-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 16px 20px;
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  .nav-logo {
    text-decoration: none;
    display: flex;
    align-items: center;
    gap: 8px;
  }

  .logo-text {
    font-size: 1.5rem;
    font-weight: 800;
    letter-spacing: -0.02em;
    background: linear-gradient(135deg, #ff6b35 0%, #ff8c42 100%);
    -webkit-background-clip: text;
    background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  .nav-links {
    display: flex;
    gap: 32px;
  }

  .nav-link {
    color: #888;
    text-decoration: none;
    font-size: 0.9rem;
    font-weight: 500;
    transition: color 0.2s ease;
  }

  .nav-link:hover {
    color: #ffffff;
  }

  .nav-actions {
    display: flex;
    align-items: center;
    gap: 16px;
  }

  .nav-github {
    display: flex;
    align-items: center;
    gap: 6px;
    color: #888;
    text-decoration: none;
    font-size: 0.875rem;
    font-weight: 500;
    padding: 8px 12px;
    border-radius: 6px;
    border: 1px solid #333;
    transition: all 0.2s ease;
  }

  .nav-github:hover {
    color: #ffffff;
    border-color: #555;
    background: rgba(255, 255, 255, 0.05);
  }

  .nav-cta {
    background: linear-gradient(135deg, #ff6b35 0%, #ff8c42 100%);
    color: #ffffff;
    text-decoration: none;
    font-size: 0.875rem;
    font-weight: 600;
    padding: 10px 20px;
    border-radius: 6px;
    transition: all 0.2s ease;
    box-shadow: 0 2px 10px rgba(255, 107, 53, 0.2);
  }

  .nav-cta:hover {
    transform: translateY(-1px);
    box-shadow: 0 4px 15px rgba(255, 107, 53, 0.3);
  }

  .nav-mobile-toggle {
    display: none;
    background: none;
    border: none;
    color: #888;
    cursor: pointer;
    padding: 8px;
  }

  .nav-mobile-menu {
    display: none;
    position: fixed;
    top: 64px;
    left: 0;
    right: 0;
    background: rgba(10, 10, 15, 0.98);
    backdrop-filter: blur(10px);
    padding: 20px;
    flex-direction: column;
    gap: 16px;
    border-bottom: 1px solid rgba(255, 255, 255, 0.05);
    z-index: 999;
  }

  .nav-mobile-menu.open {
    display: flex;
  }

  .mobile-link {
    color: #888;
    text-decoration: none;
    font-size: 1rem;
    font-weight: 500;
    padding: 12px 0;
    border-bottom: 1px solid rgba(255, 255, 255, 0.05);
    transition: color 0.2s ease;
  }

  .mobile-link:hover {
    color: #ffffff;
  }

  .mobile-cta {
    background: linear-gradient(135deg, #ff6b35 0%, #ff8c42 100%);
    color: #ffffff;
    text-decoration: none;
    font-size: 1rem;
    font-weight: 600;
    padding: 14px 20px;
    border-radius: 8px;
    text-align: center;
    margin-top: 8px;
  }

  @media (max-width: 768px) {
    .nav-links,
    .nav-actions {
      display: none;
    }

    .nav-mobile-toggle {
      display: block;
    }
  }
</style>

<script>
  const toggle = document.querySelector('.nav-mobile-toggle');
  const menu = document.querySelector('.nav-mobile-menu');

  toggle?.addEventListener('click', () => {
    menu?.classList.toggle('open');
  });

  // Close menu when clicking a link
  document.querySelectorAll('.mobile-link, .mobile-cta').forEach(link => {
    link.addEventListener('click', () => {
      menu?.classList.remove('open');
    });
  });
</script>
