---
// LPTestimonials.astro - Social proof section
// Replace placeholder testimonials with real quotes from beta users

interface Testimonial {
  quote: string;
  author: string;
  role: string;
  company: string;
  metric?: string;
}

const testimonials: Testimonial[] = [
  {
    quote: "Caro caught a destructive command I almost ran on our production database. That single save paid for itself 100x over.",
    author: "Sarah Chen",
    role: "Senior SRE",
    company: "Series B Startup",
    metric: "1 critical incident prevented"
  },
  {
    quote: "I went from Googling 'how to find large files Linux' to just typing what I want. My terminal finally speaks my language.",
    author: "Marcus Rodriguez",
    role: "Full-Stack Developer",
    company: "Fortune 500",
    metric: "40% fewer context switches"
  },
  {
    quote: "Zero cloud dependencies means I can use this on air-gapped systems. Finally, an AI tool that respects operational security.",
    author: "James Mitchell",
    role: "Security Engineer",
    company: "Defense Contractor",
    metric: "100% offline capable"
  }
];
---

<section class="testimonials" id="testimonials">
  <div class="container">
    <div class="section-header">
      <span class="section-label">TRUSTED BY DEVELOPERS</span>
      <h2 class="section-title">What Engineers Are Saying</h2>
      <p class="section-subtitle">
        Real results from developers who made the switch
      </p>
    </div>

    <div class="testimonials-grid">
      {testimonials.map((testimonial) => (
        <div class="testimonial-card">
          {testimonial.metric && (
            <div class="testimonial-metric">{testimonial.metric}</div>
          )}
          <blockquote class="testimonial-quote">
            "{testimonial.quote}"
          </blockquote>
          <div class="testimonial-author">
            <div class="author-avatar">
              {testimonial.author.split(' ').map(n => n[0]).join('')}
            </div>
            <div class="author-info">
              <div class="author-name">{testimonial.author}</div>
              <div class="author-role">{testimonial.role}, {testimonial.company}</div>
            </div>
          </div>
        </div>
      ))}
    </div>

    <div class="social-proof-bar">
      <div class="proof-item">
        <span class="proof-icon">‚≠ê</span>
        <span class="proof-text">Open Source on GitHub</span>
      </div>
      <div class="proof-item">
        <span class="proof-icon">üõ°Ô∏è</span>
        <span class="proof-text">MIT Licensed</span>
      </div>
      <div class="proof-item">
        <span class="proof-icon">üîí</span>
        <span class="proof-text">Zero Telemetry</span>
      </div>
      <div class="proof-item">
        <span class="proof-icon">üöÄ</span>
        <span class="proof-text">Production Ready</span>
      </div>
    </div>
  </div>
</section>

<style>
  .testimonials {
    padding: 100px 20px;
    background: linear-gradient(180deg, #0d0d12 0%, #0a0a0f 100%);
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
  }

  .section-header {
    text-align: center;
    margin-bottom: 60px;
  }

  .section-label {
    display: inline-block;
    font-size: 0.75rem;
    font-weight: 600;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    color: #ff6b35;
    margin-bottom: 16px;
    padding: 8px 16px;
    background: rgba(255, 107, 53, 0.1);
    border-radius: 100px;
  }

  .section-title {
    font-size: 2.5rem;
    font-weight: 700;
    color: #ffffff;
    margin-bottom: 16px;
    line-height: 1.2;
  }

  .section-subtitle {
    font-size: 1.125rem;
    color: #888;
    max-width: 500px;
    margin: 0 auto;
    line-height: 1.6;
  }

  .testimonials-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 24px;
    margin-bottom: 60px;
  }

  .testimonial-card {
    background: #111116;
    border: 1px solid #1e1e24;
    border-radius: 16px;
    padding: 32px;
    transition: all 0.3s ease;
    display: flex;
    flex-direction: column;
  }

  .testimonial-card:hover {
    border-color: #ff6b35;
    transform: translateY(-4px);
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3);
  }

  .testimonial-metric {
    display: inline-block;
    font-size: 0.75rem;
    font-weight: 600;
    color: #22c55e;
    background: rgba(34, 197, 94, 0.1);
    padding: 6px 12px;
    border-radius: 100px;
    margin-bottom: 20px;
    align-self: flex-start;
  }

  .testimonial-quote {
    font-size: 1rem;
    line-height: 1.7;
    color: #e0e0e0;
    margin: 0 0 24px 0;
    flex-grow: 1;
    font-style: italic;
  }

  .testimonial-author {
    display: flex;
    align-items: center;
    gap: 12px;
    padding-top: 20px;
    border-top: 1px solid #1e1e24;
  }

  .author-avatar {
    width: 44px;
    height: 44px;
    border-radius: 50%;
    background: linear-gradient(135deg, #ff6b35, #ff8c5a);
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 0.875rem;
    font-weight: 600;
    color: #ffffff;
  }

  .author-info {
    display: flex;
    flex-direction: column;
    gap: 2px;
  }

  .author-name {
    font-size: 0.9375rem;
    font-weight: 600;
    color: #ffffff;
  }

  .author-role {
    font-size: 0.8125rem;
    color: #666;
  }

  .social-proof-bar {
    display: flex;
    justify-content: center;
    flex-wrap: wrap;
    gap: 32px;
    padding: 32px;
    background: #111116;
    border-radius: 12px;
    border: 1px solid #1e1e24;
  }

  .proof-item {
    display: flex;
    align-items: center;
    gap: 8px;
    font-size: 0.9375rem;
    color: #888;
  }

  .proof-icon {
    font-size: 1.25rem;
  }

  .proof-text {
    font-weight: 500;
  }

  @media (max-width: 900px) {
    .testimonials-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 640px) {
    .testimonials {
      padding: 60px 16px;
    }

    .section-title {
      font-size: 1.75rem;
    }

    .testimonials-grid {
      grid-template-columns: 1fr;
      gap: 16px;
    }

    .testimonial-card {
      padding: 24px;
    }

    .social-proof-bar {
      gap: 20px;
      padding: 24px 16px;
    }

    .proof-item {
      font-size: 0.8125rem;
    }
  }
</style>
