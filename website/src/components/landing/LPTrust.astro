<style>
  .trust-section {
    padding: 80px 20px;
    background: linear-gradient(135deg, var(--color-bg-tertiary) 0%, var(--color-bg) 100%);
  }

  .container {
    max-width: 1100px;
    margin: 0 auto;
  }

  h2 {
    font-size: 36px;
    text-align: center;
    margin-bottom: 12px;
    color: var(--color-text);
  }

  .section-subtitle {
    text-align: center;
    color: var(--color-text-secondary);
    font-size: 18px;
    margin-bottom: 50px;
  }

  .testimonials-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 24px;
    margin-bottom: 50px;
  }

  .testimonial-card {
    background: var(--color-bg);
    border: 1px solid var(--color-border);
    border-radius: 12px;
    padding: 28px;
    display: flex;
    flex-direction: column;
  }

  .testimonial-context {
    font-size: 12px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    color: #ff8c42;
    margin-bottom: 16px;
  }

  .testimonial-quote {
    font-size: 15px;
    line-height: 1.7;
    color: var(--color-text);
    font-style: italic;
    margin: 0 0 20px 0;
    padding: 0;
    border: none;
    flex-grow: 1;
  }

  .testimonial-author {
    display: flex;
    align-items: center;
    gap: 12px;
    padding-top: 16px;
    border-top: 1px solid var(--color-border);
  }

  .author-name {
    font-weight: 600;
    color: var(--color-text);
    font-size: 14px;
  }

  .author-role {
    font-size: 13px;
    color: var(--color-text-secondary);
  }

  .trust-signals {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 20px;
    margin-bottom: 50px;
  }

  .trust-signal {
    display: flex;
    align-items: center;
    gap: 12px;
    background: var(--color-bg);
    border: 1px solid var(--color-border);
    border-radius: 8px;
    padding: 16px 20px;
  }

  .signal-icon {
    font-size: 24px;
  }

  .signal-label {
    font-weight: 600;
    color: var(--color-text);
    font-size: 14px;
  }

  .signal-detail {
    font-size: 12px;
    color: var(--color-text-secondary);
  }

  .trust-signal-link {
    text-decoration: none;
    cursor: pointer;
  }

  .trust-signal-link:hover {
    border-color: #ff8c42;
  }

  .trust-signal-link:hover .signal-label {
    color: #ff8c42;
  }

  .github-proof {
    text-align: center;
    padding: 32px;
    background: var(--color-bg);
    border: 1px solid var(--color-border);
    border-radius: 12px;
  }

  .github-proof p {
    font-size: 15px;
    color: var(--color-text-secondary);
    margin-bottom: 12px;
  }

  .github-link {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    color: var(--color-text);
    font-weight: 600;
    text-decoration: none;
    font-size: 16px;
    transition: color 0.2s;
  }

  .github-link:hover {
    color: #ff8c42;
  }

  .github-icon {
    opacity: 0.8;
  }

  @media (max-width: 900px) {
    .testimonials-grid {
      grid-template-columns: 1fr;
    }

    .trust-signals {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 768px) {
    h2 {
      font-size: 28px;
    }

    .trust-signals {
      grid-template-columns: 1fr;
    }
  }
</style>
