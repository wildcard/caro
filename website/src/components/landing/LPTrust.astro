---

<section id="trust" class="trust-section">
  <div class="container">
    <h2>Engineers Who've Been There</h2>
    <p class="section-subtitle">Specific experiences, not generic praise</p>

    <div class="testimonials-grid">
      {testimonials.map((t) => (
        <div class="testimonial-card">
          <div class="testimonial-context">{t.context}</div>
          <blockquote class="testimonial-quote">"{t.quote}"</blockquote>
          <div class="testimonial-author">
            <div class="author-info">
              <div class="author-name">{t.author}</div>
              <div class="author-role">{t.role}, {t.company}</div>
            </div>
          </div>
        </div>
      ))}
    </div>

    <div class="trust-signals">
      {trustSignals.map((signal) => (
        signal.link ? (
          <a href={signal.link} class="trust-signal trust-signal-link">
            <span class="signal-icon">{signal.icon}</span>
            <div class="signal-content">
              <div class="signal-label">{signal.label}</div>
              <div class="signal-detail">{signal.detail}</div>
            </div>
          </a>
        ) : (
          <div class="trust-signal">
            <span class="signal-icon">{signal.icon}</span>
            <div class="signal-content">
              <div class="signal-label">{signal.label}</div>
              <div class="signal-detail">{signal.detail}</div>
            </div>
