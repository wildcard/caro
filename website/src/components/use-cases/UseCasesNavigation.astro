---
// Navigation component for use-cases section with dropdown
interface Props {
  currentPage?: string;
}

const { currentPage } = Astro.props;

const personas = [
  { slug: 'sre', title: 'SRE & On-Call Engineers', icon: 'üö®' },
  { slug: 'air-gapped', title: 'Air-Gapped & Security', icon: 'üîê' },
  { slug: 'devops', title: 'DevOps & Platform', icon: 'üîß' },
  { slug: 'tech-lead', title: 'Tech Leads & Managers', icon: 'üë•' },
  { slug: 'developer', title: 'Developers', icon: 'üíª' },
];
---

<nav class="uc-nav">
  <div class="container">
    <a href="/" class="nav-brand">Caro</a>
    <div class="nav-center">
      <a href="/use-cases" class={`nav-link ${currentPage === 'index' ? 'active' : ''}`}>All Use Cases</a>
      <div class="nav-dropdown">
        <button class="nav-link dropdown-trigger">
          By Role <span class="dropdown-arrow">‚ñæ</span>
        </button>
        <div class="dropdown-menu">
          {personas.map((persona) => (
            <a
              href={`/use-cases/${persona.slug}`}
              class={`dropdown-item ${currentPage === persona.slug ? 'active' : ''}`}
            >
              <span class="dropdown-icon">{persona.icon}</span>
              {persona.title}
            </a>
          ))}
        </div>
      </div>
    </div>
    <div class="nav-right">
      <a href="#download" class="nav-cta">Get Started Free</a>
      <button id="theme-toggle" aria-label="Toggle dark mode" title="Toggle dark mode">
        <svg class="sun-icon" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <circle cx="12" cy="12" r="5"/>
          <line x1="12" y1="1" x2="12" y2="3"/>
          <line x1="12" y1="21" x2="12" y2="23"/>
          <line x1="4.22" y1="4.22" x2="5.64" y2="5.64"/>
          <line x1="18.36" y1="18.36" x2="19.78" y2="19.78"/>
          <line x1="1" y1="12" x2="3" y2="12"/>
          <line x1="21" y1="12" x2="23" y2="12"/>
          <line x1="4.22" y1="19.78" x2="5.64" y2="18.36"/>
          <line x1="18.36" y1="5.64" x2="19.78" y2="4.22"/>
        </svg>
        <svg class="moon-icon" width="18" height="18" viewBox="0 0 24 24" fill="currentColor">
          <path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"/>
        </svg>
      </button>
    </div>
  </div>
</nav>

<style>
  .uc-nav {
    background: var(--color-bg);
    padding: 16px 0;
    position: sticky;
    top: 0;
    z-index: 999;
    border-bottom: 1px solid var(--color-border);
    transition: background-color 0.3s ease, border-color 0.3s ease;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .nav-brand {
    font-size: 22px;
    font-weight: 700;
    color: #ff8c42;
    text-decoration: none;
  }

  .nav-center {
    display: flex;
    align-items: center;
    gap: 8px;
  }

  .nav-link {
    color: var(--color-text);
    text-decoration: none;
    font-size: 14px;
    font-weight: 500;
    padding: 8px 16px;
    border-radius: 6px;
    transition: background 0.2s, color 0.2s;
    background: transparent;
    border: none;
    cursor: pointer;
    display: flex;
    align-items: center;
    gap: 4px;
  }

  .nav-link:hover {
    background: var(--color-bg-secondary);
  }

  .nav-link.active {
    color: #ff8c42;
    background: rgba(255, 140, 66, 0.1);
  }

  .nav-dropdown {
    position: relative;
  }

  .dropdown-arrow {
    font-size: 10px;
    transition: transform 0.2s;
  }

  .dropdown-menu {
    position: absolute;
    top: 100%;
    left: 0;
    background: var(--color-bg);
    border: 1px solid var(--color-border);
    border-radius: 8px;
    padding: 8px;
    min-width: 240px;
    box-shadow: 0 10px 40px rgba(0, 0, 0, 0.15);
    opacity: 0;
    visibility: hidden;
    transform: translateY(-10px);
    transition: all 0.2s ease;
  }

  :global(.dark) .dropdown-menu {
    box-shadow: 0 10px 40px rgba(0, 0, 0, 0.4);
  }

  .nav-dropdown:hover .dropdown-menu {
    opacity: 1;
    visibility: visible;
    transform: translateY(4px);
  }

  .nav-dropdown:hover .dropdown-arrow {
    transform: rotate(180deg);
  }

  .dropdown-item {
    display: flex;
    align-items: center;
    gap: 10px;
    padding: 10px 12px;
    border-radius: 6px;
    color: var(--color-text);
    text-decoration: none;
    font-size: 14px;
    transition: background 0.2s;
  }

  .dropdown-item:hover {
    background: var(--color-bg-secondary);
  }

  .dropdown-item.active {
    color: #ff8c42;
    background: rgba(255, 140, 66, 0.1);
  }

  .dropdown-icon {
    font-size: 18px;
  }

  .nav-right {
    display: flex;
    align-items: center;
    gap: 16px;
  }

  .nav-cta {
    background: linear-gradient(135deg, #ff8c42 0%, #ff6b35 100%);
    color: white;
    padding: 10px 24px;
    border-radius: 6px;
    font-weight: 600;
    font-size: 14px;
    text-decoration: none;
    transition: opacity 0.2s, transform 0.2s;
  }

  .nav-cta:hover {
    opacity: 0.9;
    transform: translateY(-1px);
  }

  #theme-toggle {
    background: var(--color-bg-secondary);
    border: 1px solid var(--color-border);
    border-radius: 50%;
    width: 36px;
    height: 36px;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    color: var(--color-text);
    transition: transform 0.2s, background-color 0.3s;
  }

  #theme-toggle:hover {
    transform: scale(1.05);
  }

  .sun-icon { display: none; }
  .moon-icon { display: block; }
  :global(.dark) .sun-icon { display: block; }
  :global(.dark) .moon-icon { display: none; }

  @media (max-width: 768px) {
    .nav-center {
      display: none;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const toggle = document.getElementById('theme-toggle');
    toggle?.addEventListener('click', () => {
      document.documentElement.classList.toggle('dark');
      const isDark = document.documentElement.classList.contains('dark');
      localStorage.setItem('theme', isDark ? 'dark' : 'light');
    });
  });
</script>
