---
import Analytics from '@vercel/analytics/astro';

interface Props {
  title: string;
  description: string;
}

const { title, description } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/png" href="/caro-pixel.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <!-- GNU Unifont - FOSS bitmap font from unifoundry.com -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inconsolata:wght@400;700;900&family=JetBrains+Mono:wght@400;700;800&display=swap" rel="stylesheet">
    <!-- Lucide Icons -->
    <script src="https://unpkg.com/lucide@latest"></script>
    <script is:inline>
      // Dark mode initialization (before render to prevent flash)
      const theme = (() => {
        if (typeof localStorage !== 'undefined' && localStorage.getItem('theme')) {
          return localStorage.getItem('theme');
        }
        if (window.matchMedia('(prefers-color-scheme: dark)').matches) {
          return 'dark';
        }
        return 'light';
      })();

      if (theme === 'dark') {
        document.documentElement.classList.add('dark');
      } else {
        document.documentElement.classList.remove('dark');
      }
    </script>
  </head>
  <body>
    <button id="theme-toggle" aria-label="Toggle dark mode" title="Toggle dark mode">
      <svg class="sun-icon" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <circle cx="12" cy="12" r="5"/>
        <line x1="12" y1="1" x2="12" y2="3"/>
        <line x1="12" y1="21" x2="12" y2="23"/>
        <line x1="4.22" y1="4.22" x2="5.64" y2="5.64"/>
        <line x1="18.36" y1="18.36" x2="19.78" y2="19.78"/>
        <line x1="1" y1="12" x2="3" y2="12"/>
        <line x1="21" y1="12" x2="23" y2="12"/>
        <line x1="4.22" y1="19.78" x2="5.64" y2="18.36"/>
        <line x1="18.36" y1="5.64" x2="19.78" y2="4.22"/>
      </svg>
      <svg class="moon-icon" width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
        <path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"/>
      </svg>
    </button>
    <slot />
    <Analytics />
  </body>
</html>

<style is:global>
  :root {
    /* Amber CRT Terminal Theme - DOS/Commodore inspired */
    --color-bg: #1a0f00;
    --color-bg-secondary: #2a1f0f;
    --color-bg-tertiary: #3a2f1f;
    --color-text: #ffb000;
    --color-text-secondary: #ff8c42;
    --color-text-tertiary: #ffcc66;
    --color-border: #ff8c42;
    --color-footer-bg: #0d0800;
    --color-footer-text: #ffb000;
    --color-footer-text-muted: #cc7700;
    --color-links-muted: #ff8c42;

    /* Accent colors */
    --color-primary: #ff8c42;
    --color-primary-bright: #ffb866;
    --color-secondary: #ffb000;
    --color-accent: #ff6b35;
    --color-success: #00ff88;
    --color-warning: #ffcc00;

    /* Terminal colors */
    --color-terminal-green: #00ff88;
    --color-terminal-amber: #ffb000;
    --color-terminal-red: #ff4444;

    /* Effects */
    --scanline-opacity: 0.08;
    --glow-color: rgba(255, 176, 0, 0.3);
  }

  .dark {
    /* Green Phosphor Terminal Theme - VT100/Apple II inspired */
    --color-bg: #000000;
    --color-bg-secondary: #001a00;
    --color-bg-tertiary: #002200;
    --color-text: #00ff88;
    --color-text-secondary: #00dd77;
    --color-text-tertiary: #66ffaa;
    --color-border: #00ff88;
    --color-footer-bg: #000000;
    --color-footer-text: #00ff88;
    --color-footer-text-muted: #00aa55;
    --color-links-muted: #00dd77;

    /* Accent colors */
    --color-primary: #00ff88;
    --color-primary-bright: #66ffaa;
    --color-secondary: #00dd77;
    --color-accent: #00ffff;
    --color-success: #00ff88;
    --color-warning: #ffff00;

    /* Terminal colors */
    --color-terminal-green: #00ff88;
    --color-terminal-amber: #ffff00;
    --color-terminal-red: #ff4444;

    /* Effects */
    --scanline-opacity: 0.12;
    --glow-color: rgba(0, 255, 136, 0.4);
  }

  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  html {
    transition: none;
    image-rendering: pixelated;
    image-rendering: -moz-crisp-edges;
    image-rendering: crisp-edges;
  }

  body {
    font-family: 'JetBrains Mono', 'Inconsolata', 'Courier New', monospace;
    line-height: 1.7;
    color: var(--color-text);
    background: var(--color-bg);
    transition: none;
    position: relative;
    font-size: 16px;
    letter-spacing: 0.3px;
    font-weight: 400;
  }

  /* CRT Scanline Effect */
  body::before {
    content: '';
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    pointer-events: none;
    z-index: 9998;
    background: repeating-linear-gradient(
      0deg,
      rgba(0, 0, 0, var(--scanline-opacity)) 0px,
      transparent 1px,
      transparent 2px,
      rgba(0, 0, 0, var(--scanline-opacity)) 3px
    );
  }

  /* Retro CRT Glow Effect */
  body::after {
    content: '';
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    pointer-events: none;
    z-index: 9997;
    background: radial-gradient(ellipse at center, transparent 0%, rgba(0, 0, 0, 0.1) 100%);
  }

  .container {
    max-width: 900px;
    margin: 0 auto;
    padding: 0 20px;
  }

  section {
    padding: 80px 20px;
  }

  section h2 {
    font-size: 36px;
    text-align: center;
    margin-bottom: 20px;
    color: var(--color-text);
  }

  section .section-subtitle {
    text-align: center;
    color: var(--color-text-secondary);
    font-size: 18px;
    margin-bottom: 50px;
    max-width: 700px;
    margin-left: auto;
    margin-right: auto;
  }

  /* Dark mode toggle button - Retro terminal style */
  #theme-toggle {
    position: fixed;
    top: 20px;
    right: 20px;
    z-index: 10000;
    background: var(--color-bg);
    border: 3px solid var(--color-border);
    border-radius: 0;
    width: 52px;
    height: 52px;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    color: var(--color-text);
    transition: none;
    box-shadow: 0 0 15px var(--glow-color), 4px 4px 0 var(--color-border);
    image-rendering: pixelated;
  }

  #theme-toggle:hover {
    background: var(--color-bg-secondary);
    box-shadow: 0 0 25px var(--glow-color), 4px 4px 0 var(--color-border);
  }

  #theme-toggle:active {
    box-shadow: 0 0 15px var(--glow-color), 2px 2px 0 var(--color-border);
    transform: translate(2px, 2px);
  }

  .sun-icon {
    display: none;
  }

  .moon-icon {
    display: block;
  }

  .dark .sun-icon {
    display: block;
  }

  .dark .moon-icon {
    display: none;
  }

  @media (max-width: 768px) {
    section h2 {
      font-size: 28px;
    }

    #theme-toggle {
      width: 44px;
      height: 44px;
      top: 16px;
      right: 16px;
    }
  }
</style>

<script>
  // Smooth scrolling for anchor links
  document.addEventListener('DOMContentLoaded', () => {
    document.querySelectorAll('a[href^="#"]').forEach(anchor => {
      anchor.addEventListener('click', function (e) {
        e.preventDefault();
        const target = document.querySelector(this.getAttribute('href') || '');
        if (target) {
          target.scrollIntoView({ behavior: 'smooth', block: 'start' });
        }
      });
    });

    // Dark mode toggle
    const themeToggle = document.getElementById('theme-toggle');

    themeToggle?.addEventListener('click', () => {
      const isDark = document.documentElement.classList.contains('dark');

      if (isDark) {
        document.documentElement.classList.remove('dark');
        localStorage.setItem('theme', 'light');
      } else {
        document.documentElement.classList.add('dark');
        localStorage.setItem('theme', 'dark');
      }
    });

    // Listen for system theme changes
    window.matchMedia('(prefers-color-scheme: dark)').addEventListener('change', (e) => {
      if (!localStorage.getItem('theme')) {
        if (e.matches) {
          document.documentElement.classList.add('dark');
        } else {
          document.documentElement.classList.remove('dark');
        }
      }
    });

    // Initialize Lucide icons
    if (typeof lucide !== 'undefined') {
      lucide.createIcons();
    }
  });
</script>
