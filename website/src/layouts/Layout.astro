---
import Analytics from '@vercel/analytics/astro';
import PostHog from '../components/PostHog.astro';
import SnowEffect from '../components/SnowEffect.astro';
import BackToTop from '../components/BackToTop.astro';
import NewYearCountdown from '../components/NewYearCountdown.astro';
import NewYearEffect from '../components/NewYearEffect.astro';
import OmniSearch from '../components/OmniSearch.astro';
import SearchHighlight from '../components/SearchHighlight.astro';
import HolidayDebugPanel from '../components/HolidayDebugPanel.astro';
import HumanityEventBanner from '../components/HumanityEventBanner.astro';
import { isRtl, getAllLocales, type Locale } from '../i18n/config';

interface Props {
  title: string;
  description: string;
  lang?: Locale;
}

const { title, description, lang = 'en' } = Astro.props;
const dir = isRtl(lang) ? 'rtl' : 'ltr';
---

<!doctype html>
<html lang={lang} dir={dir}>
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/png" href="/caro-pixel.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <!-- ASCII Morph Library (Multi-instance support) -->
    <script src="/ascii-morph-multi.js" is:inline></script>

    <!-- Hreflang tags for all supported locales -->
    {getAllLocales().map(locale => (
      <link
        rel="alternate"
        hreflang={locale.code}
        href={`https://caro.sh/${locale.code === 'en' ? '' : locale.code + '/'}`}
      />
    ))}

    <!-- Noto fonts for RTL languages -->
    {lang === 'he' && (
      <>
        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link href="https://fonts.googleapis.com/css2?family=Noto+Sans+Hebrew:wght@400;700&display=swap" rel="stylesheet" />
      </>
    )}
    {lang === 'ar' && (
      <>
        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link href="https://fonts.googleapis.com/css2?family=Noto+Sans+Arabic:wght@400;700&display=swap" rel="stylesheet" />
      </>
    )}
    {lang === 'ur' && (
      <>
        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link href="https://fonts.googleapis.com/css2?family=Noto+Nastaliq+Urdu:wght@400;700&display=swap" rel="stylesheet" />
      </>
    )}
    <script is:inline>
      // Dark mode initialization (before render to prevent flash)
      const theme = (() => {
        if (typeof localStorage !== 'undefined' && localStorage.getItem('theme')) {
          return localStorage.getItem('theme');
        }
        if (window.matchMedia('(prefers-color-scheme: dark)').matches) {
          return 'dark';
        }
        return 'light';
      })();

      if (theme === 'dark') {
        document.documentElement.classList.add('dark');
      } else {
        document.documentElement.classList.remove('dark');
      }

      // Test date override (for development and preview deployments)
      (function() {
        const hostname = window.location.hostname;
        const isDevOrPreview = hostname === 'localhost'
          || hostname === '127.0.0.1'
          || hostname.endsWith('.vercel.app');

        if (isDevOrPreview) {
          const params = new URLSearchParams(window.location.search);
          const testDate = params.get('testDate');

          if (testDate) {
            // Parse YYYY-MM-DD format
            const match = testDate.match(/^(\d{4})-(\d{2})-(\d{2})$/);
            if (match) {
              const [_, year, month, day] = match;
              const date = new Date(parseInt(year), parseInt(month) - 1, parseInt(day));

              if (!isNaN(date.getTime())) {
                window.__CARO_TEST_DATE = date.toISOString();
                console.log('üß™ Test date activated:', testDate, '‚Üí', date.toDateString());
                console.log('üî¨ Components will use this date for initialization');
              }
            }
          }
        }
      })();

      // Holiday theme initialization (before render to prevent flash)
      (function() {
        function isHolidaySeason() {
          let now = new Date();

          // Support test date override (localhost only)
          if (window.__CARO_TEST_DATE) {
            now = new Date(window.__CARO_TEST_DATE);
          }

          const month = now.getMonth(); // 0-indexed
          const day = now.getDate();
          // December 1-31 (Christmas/Hanukkah season) OR January 1-3 (New Year)
          return (month === 11) || (month === 0 && day <= 3);
        }

        if (isHolidaySeason()) {
          // Holiday themes are opt-in only - only apply if user has explicitly chosen one
          const savedHolidayTheme = localStorage.getItem('holidayTheme');
          if (savedHolidayTheme && savedHolidayTheme !== 'none') {
            document.documentElement.classList.add(savedHolidayTheme);
          }
          // Note: If no theme saved, we default to 'none' (no theme applied)
        }
      })();
    </script>
  </head>
  <body>
    <HumanityEventBanner />
    <SnowEffect />
    <NewYearCountdown />
    <NewYearEffect />
    <OmniSearch />
    <slot />
    <SearchHighlight />
    <BackToTop />
    <HolidayDebugPanel />
    <Analytics />
    <PostHog />
  </body>
</html>

