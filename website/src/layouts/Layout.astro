    --color-bg-tertiary: #1f1a1a;
    --christmas-red: #e63946;
    --christmas-green: #2ecc71;
    --christmas-gold: #f1c40f;
    --christmas-white: #f5f5f5;
  }

  /* Christmas accents on UI elements */
  .christmas .cta-button,
  .christmas .companion-badge {
    background: linear-gradient(135deg, var(--christmas-red) 0%, #a01830 100%) !important;
  }

