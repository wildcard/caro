---
import Analytics from '@vercel/analytics/astro';
import SnowEffect from '../components/SnowEffect.astro';
import BackToTop from '../components/BackToTop.astro';
import NewYearCountdown from '../components/NewYearCountdown.astro';
import NewYearEffect from '../components/NewYearEffect.astro';
import { isRtl, getAllLocales, type Locale } from '../i18n/config';

interface Props {
  title: string;
  description: string;
  lang?: Locale;
}

const { title, description, lang = 'en' } = Astro.props;
const dir = isRtl(lang) ? 'rtl' : 'ltr';
---

<!doctype html>
<html lang={lang} dir={dir}>
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/png" href="/caro-pixel.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <!-- ASCII Morph Library (Multi-instance support) -->
    <script src="/ascii-morph-multi.js" is:inline></script>

    <!-- Hreflang tags for all supported locales -->
    {getAllLocales().map(locale => (
      <link
        rel="alternate"
        hreflang={locale.code}
        href={`https://caro.sh/${locale.code === 'en' ? '' : locale.code + '/'}`}
      />
    ))}

    <!-- Noto fonts for RTL languages -->
    {lang === 'he' && (
      <>
        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link href="https://fonts.googleapis.com/css2?family=Noto+Sans+Hebrew:wght@400;700&display=swap" rel="stylesheet" />
      </>
    )}
    {lang === 'ar' && (
      <>
        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link href="https://fonts.googleapis.com/css2?family=Noto+Sans+Arabic:wght@400;700&display=swap" rel="stylesheet" />
      </>
    )}
    {lang === 'ur' && (
      <>
        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link href="https://fonts.googleapis.com/css2?family=Noto+Nastaliq+Urdu:wght@400;700&display=swap" rel="stylesheet" />
      </>
    )}
    <script is:inline>
      // Dark mode initialization (before render to prevent flash)
      const theme = (() => {
        if (typeof localStorage !== 'undefined' && localStorage.getItem('theme')) {
          return localStorage.getItem('theme');
        }
        if (window.matchMedia('(prefers-color-scheme: dark)').matches) {
          return 'dark';
        }
        return 'light';
      })();

      if (theme === 'dark') {
        document.documentElement.classList.add('dark');
      } else {
        document.documentElement.classList.remove('dark');
      }

      // Holiday theme initialization (before render to prevent flash)
      (function() {
        function isHolidaySeason() {
          const now = new Date();
          const month = now.getMonth(); // 0-indexed
          // December 1-31 only (Christmas/Hanukkah season)
          // January 1 is now handled separately as New Year
          return (month === 11);
        }

        function isNewYearDay() {
          const now = new Date();
          const month = now.getMonth(); // 0-indexed
          const day = now.getDate();
          // January 1st only
          return (month === 0 && day === 1);
        }

        if (isHolidaySeason()) {
          const savedHolidayTheme = localStorage.getItem('holidayTheme');
          if (savedHolidayTheme && savedHolidayTheme !== 'none') {
            document.documentElement.classList.add(savedHolidayTheme);
          }
        }

        // New Year's Day gets its own theme
        if (isNewYearDay()) {
          document.documentElement.classList.add('new-year');
        }
      })();
    </script>
  </head>
  <body>
    <SnowEffect />
    <NewYearCountdown />
    <NewYearEffect />
    <slot />
    <BackToTop />
    <Analytics />
  </body>
</html>

