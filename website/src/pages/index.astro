---
import Layout from '../layouts/Layout.astro';
import LPNavigation from '../components/landing/LPNavigation.astro';
import LPHero from '../components/landing/LPHero.astro';
import LPVideoDemo from '../components/landing/LPVideoDemo.astro';
import InteractiveTerminal from '../components/InteractiveTerminal.astro';
import LPPersonas from '../components/landing/LPPersonas.astro';
import LPMoments from '../components/landing/LPMoments.astro';
import LPTestimonials from '../components/landing/LPTestimonials.astro';
import LPFeatures from '../components/landing/LPFeatures.astro';
import LPWaitlist from '../components/landing/LPWaitlist.astro';
import LPDownload from '../components/landing/LPDownload.astro';
import LPFooter from '../components/landing/LPFooter.astro';
---

<Layout
  title="Caro - Terminal mastery, unlocked"
  description="Transform natural language into safe POSIX shell commands. 52+ dangerous patterns blocked. Zero data collection. Works offline on macOS, Linux, BSD, and Windows."
>
  <LPNavigation />
  <main>
    <LPHero />
    <LPVideoDemo />
    <section id="demo" class="demo-section">
      <div class="demo-container">
        <h2 class="demo-title">Try It Yourself</h2>
        <p class="demo-subtitle">
          Experience the difference. Start in vanilla mode, then install Caro to unlock natural language commands.
        </p>
        <InteractiveTerminal />
      </div>
    </section>
    <LPPersonas />
    <LPMoments />
    <LPTestimonials />
    <LPFeatures />
    <LPWaitlist />
    <LPDownload />
  </main>
  <LPFooter />
</Layout>

<style>
  main {
    padding-top: 64px; /* Account for fixed navigation */
  }

  .demo-section {
    padding: 80px 20px;
    background: #0a0a0f;
  }

  .demo-container {
    max-width: 1200px;
    margin: 0 auto;
  }

  .demo-title {
    font-size: 2.5rem;
    font-weight: 700;
    text-align: center;
    color: #ffffff;
    margin-bottom: 16px;
  }

  .demo-subtitle {
    font-size: 1.125rem;
    color: #888;
    text-align: center;
    max-width: 600px;
    margin: 0 auto 40px;
    line-height: 1.6;
  }

  @media (max-width: 640px) {
    .demo-section {
      padding: 60px 16px;
    }

    .demo-title {
      font-size: 1.75rem;
    }
  }
</style>
