    border-radius: 16px;
    padding: 16px;
    margin-bottom: 12px;
  }

  .tweet-header {
    display: flex;
    align-items: center;
    gap: 12px;
    margin-bottom: 12px;
  }

  .avatar {
    width: 48px;
    height: 48px;
    background: linear-gradient(135deg, #ff8c42, #ff6b35);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: bold;
    font-size: 20px;
    color: white;
  }

  .user-info .name {
    font-weight: 700;
    display: block;
  }

  .user-info .handle {
    color: #8899a6;
    font-size: 14px;
  }

  .tweet-body {
    font-size: 15px;
    line-height: 1.5;
  }

  .tweet-body p {
    margin: 0 0 8px;
  }

  .tweet-body p:last-child {
    margin-bottom: 0;
  }

  .tweet-actions {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-top: 12px;
    padding-top: 12px;
    border-top: 1px solid #38444d;
  }

  .copy-tweet, .copy-response {
    background: #1da1f2;
    color: white;
    border: none;
    padding: 8px 16px;
    border-radius: 20px;
    cursor: pointer;
    font-size: 13px;
  }

  .copy-tweet:hover, .copy-response:hover {
    background: #1a91da;
  }

  .char-count {
    color: #8899a6;
    font-size: 13px;
  }

  /* Single Tweets */
  .single-tweets {
    display: flex;
    flex-direction: column;
    gap: 24px;
  }

  .tweet-card h4 {
    color: #1da1f2;
    margin: 0 0 12px;
    font-size: 14px;
    text-transform: uppercase;
    letter-spacing: 1px;
  }

  /* Response Grid */
  .response-grid {
    display: flex;
    flex-direction: column;
    gap: 16px;
  }

  .response-card {
    background: #192734;
    border: 1px solid #38444d;
    border-radius: 12px;
    padding: 16px;
  }

  .question {
    color: #8899a6;
    font-style: italic;
    margin-bottom: 12px;
    padding-bottom: 12px;
    border-bottom: 1px solid #38444d;
  }

  .answer {
    font-size: 14px;
    line-height: 1.5;
    margin-bottom: 12px;
  }

  .answer p {
    margin: 0 0 8px;
  }

  /* Hashtags */
  .hashtags {
    display: flex;
    flex-wrap: wrap;
    gap: 8px;
    margin-bottom: 12px;
  }

  .hashtag {
    background: #192734;
    color: #1da1f2;
    padding: 8px 16px;
    border-radius: 20px;
    font-size: 14px;
    cursor: pointer;
  }

  .hashtag:hover {
    background: #1da1f2;
    color: white;
  }

  .hint {
    color: #8899a6;
    font-size: 13px;
  }

  @media (max-width: 768px) {
    .preview-content {
      padding: 20px 16px;
    }
  }
</style>

<script>
  // Copy tweet content
  document.querySelectorAll('.copy-tweet').forEach(btn => {
    btn.addEventListener('click', () => {
      const tweet = btn.closest('.tweet');
      const body = tweet.querySelector('.tweet-body');
      const text = body.innerText;
      navigator.clipboard.writeText(text);
      btn.textContent = 'âœ“ Copied!';
      setTimeout(() => {
        btn.textContent = 'ğŸ“‹ Copy';
      }, 2000);
    });
  });

  // Copy response content
  document.querySelectorAll('.copy-response').forEach(btn => {
    btn.addEventListener('click', () => {
      const card = btn.closest('.response-card');
      const answer = card.querySelector('.answer');
      const text = answer.innerText;
      navigator.clipboard.writeText(text);
      btn.textContent = 'âœ“ Copied!';
      setTimeout(() => {
        btn.textContent = 'ğŸ“‹ Copy';
      }, 2000);
    });
  });

  // Copy hashtags
  document.querySelectorAll('.hashtag').forEach(tag => {
    tag.addEventListener('click', () => {
      navigator.clipboard.writeText(tag.textContent);
      const original = tag.style.background;
      tag.style.background = '#1da1f2';
      tag.style.color = 'white';
      setTimeout(() => {
        tag.style.background = '';
        tag.style.color = '';
      }, 500);
    });
  });
</script>
