/**
 * Jobs To Be Done - Canonical Framework Documentation
 *
 * Based on Anthony Ulwick's Outcome-Driven Innovation (ODI)
 * and Clayton Christensen's JTBD theory.
 *
 * This page documents Caro's JTBD using the canonical format:
 * - Job statements: "When [situation], I want to [motivation], so I can [expected outcome]"
 * - Functional, emotional, and social jobs
 * - Desired outcomes and success metrics
 * - Job triggers and context switches
 */

import LandingPage from '../../layouts/LandingPage.astro';
import Navigation from '../../components/Navigation.astro';
import LPDownload from '../../components/landing/LPDownload.astro';
import LPFooter from '../../components/landing/LPFooter.astro';

// Core Jobs following canonical JTBD format
const coreJobs = [
  {
    id: 'safe-execution',
    situation: "I'm about to run a command in production",
    motivation: "validate it won't cause damage",
    outcome: "prevent outages and keep my systems running",
    type: 'functional',
    frequency: 'Daily',
    importance: 'Critical',
    satisfaction_gap: 'High',
  },
  {
    id: 'offline-assistance',
    situation: "I'm working in an air-gapped or restricted environment",
    motivation: "get AI assistance without network access",
    outcome: "be productive even when isolated from the internet",
    type: 'functional',
    frequency: 'Daily',
    importance: 'Critical',
    satisfaction_gap: 'Very High',
  },
  {
    id: 'nl-to-command',
    situation: "I know what I want to do but not the exact command syntax",
    motivation: "describe my intent in plain English",
    outcome: "get a working command without searching documentation",
    type: 'functional',
    frequency: 'Daily',
    importance: 'High',
    satisfaction_gap: 'Medium',
  },
  {
    id: 'cross-platform',
    situation: "I'm writing commands that need to work on Mac, Linux, and CI",
    motivation: "generate platform-aware commands automatically",
    outcome: "stop debugging BSD vs GNU flag differences",
    type: 'functional',
    frequency: 'Weekly',
    importance: 'High',
    satisfaction_gap: 'High',
  },
  {
    id: 'incident-response',
    situation: "I'm troubleshooting an incident at 3 AM",
    motivation: "get commands quickly without making mistakes",
    outcome: "resolve incidents faster without causing additional damage",
    type: 'functional',
    frequency: 'Weekly',
    importance: 'Critical',
    satisfaction_gap: 'High',
  },
