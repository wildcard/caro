  },
  {
    job: "Feel in control during high-pressure incidents",
    painPoint: "Stress leads to mistakes, mistakes make incidents worse",
    caroSolution: "Fast, offline-capable assistance when you need it most",
  },
  {
    job: "Feel competent despite not memorizing every flag",
    painPoint: "Imposter syndrome when forgetting basic commands",
    caroSolution: "Natural language interface lets you focus on intent, not syntax",
  },
  {
    job: "Feel secure working in restricted environments",
    painPoint: "Other tools require internet, leaving you stranded",
    caroSolution: "Bundled model works where nothing else can",
  },
];

// Social jobs - how users want to be perceived
const socialJobs = [
  {
    job: "Be seen as careful and professional",
    context: "Team environments where mistakes are visible",
    caroSolution: "Visible safety validation shows diligence to colleagues",
  },
  {
    job: "Be seen as the person who prevents incidents",
    context: "Engineering teams that value reliability",
    caroSolution: "Catches dangerous commands before they cause problems",
  },
  {
    job: "Be seen as security-conscious",
    context: "Organizations with compliance requirements",
    caroSolution: "Offline operation and zero telemetry satisfy security teams",
  },
];

// Job triggers - what causes users to seek a solution
const jobTriggers = [
  {
    trigger: "Near-miss incident",
    description: "Almost ran a dangerous command, caught it just in time",
    urgency: "Immediate",
  },
  {
    trigger: "Actual incident caused by command error",
    description: "Production outage from typo or wrong flags",
    urgency: "Immediate",
  },
  {
    trigger: "New air-gapped deployment",
    description: "Moved to restricted environment, existing tools don't work",
    urgency: "High",
  },
  {
    trigger: "Cross-platform migration",
    description: "Moving from Mac to Linux or vice versa, commands breaking",
    urgency: "Medium",
  },
  {
    trigger: "Team growth",
    description: "New engineers joining who might make dangerous mistakes",
    urgency: "Medium",
  },
  {
    trigger: "Security audit",
    description: "Need to document and enforce command-line safety standards",
    urgency: "High",
  },
];

// Desired outcomes (ODI format) - what users measure success by
const desiredOutcomes = [
  {
    outcome: "Minimize the time it takes to validate a command is safe",
    metric: "Seconds from command to safety verdict",
    current: "Manual review: 30-60 seconds",
    withCaro: "Instant: <100ms",
  },
  {
    outcome: "Minimize the likelihood of running a destructive command",
    metric: "Dangerous commands executed per month",
    current: "Varies, depends on vigilance",
    withCaro: "Zero (blocked before execution)",
  },
  {
    outcome: "Minimize the time it takes to get a working command",
    metric: "Seconds from intent to executable command",
    current: "Google + trial/error: 2-5 minutes",
    withCaro: "<2 seconds inference",
  },
  {
    outcome: "Minimize dependency on network connectivity",
    metric: "Percentage of functionality available offline",
    current: "0% (cloud AI tools)",
    withCaro: "100% (bundled model)",
  },
  {
    outcome: "Minimize cross-platform debugging time",
    metric: "Time debugging BSD vs GNU differences",
    current: "15-30 minutes per issue",
    withCaro: "Zero (platform-aware generation)",
  },
];

// Hiring/firing metaphor - what products are hired/fired
const hiringFiring = [
  {
    context: "Command validation",
    fires: ["Manual review", "Hope and prayer", "Bash aliases with safety checks"],
    hires: "Caro's deterministic pattern matching",
    reason: "Can't hallucinate, doesn't require vigilance",
  },
  {
    context: "AI shell assistance",
    fires: ["ChatGPT (requires network)", "Copilot CLI (requires network)", "Stack Overflow searches"],
    hires: "Caro's offline-first AI",
    reason: "Works in restricted environments, no dependency on cloud",
  },
  {
    context: "Command learning",
    fires: ["Man pages", "TLDR pages", "Google searches"],
    hires: "Caro's natural language interface",
    reason: "Describe intent, get working commands instantly",
  },
  {
    context: "Cross-platform scripting",
    fires: ["Trial and error", "Maintaining separate scripts", "Conditional shell logic"],
    hires: "Caro's platform detection",
    reason: "Generates correct flags for current platform",
  },
];

// Job map for core job: Safe command execution
const jobMap = [
  {
    step: "Define",
    action: "Decide what action to take",
    example: "I need to delete old log files",
    caroRole: "Understands natural language intent",
  },
  {
    step: "Locate",
    action: "Identify what to operate on",
    example: "Files older than 30 days in /var/log",
    caroRole: "Generates correct find/date syntax",
  },
  {
    step: "Prepare",
    action: "Formulate the command",
    example: "find /var/log -mtime +30 -delete",
    caroRole: "Creates platform-correct command",
  },
  {
    step: "Validate",
    action: "Check command is safe",
    example: "Is this going to delete something important?",
    caroRole: "Matches against 52+ dangerous patterns",
  },
  {
    step: "Confirm",
    action: "Make go/no-go decision",
    example: "Safe verdict gives confidence to proceed",
    caroRole: "Clear safety status with explanations",
  },
  {
    step: "Execute",
    action: "Run the command",
    example: "Press enter with confidence",
    caroRole: "Optional: direct execution with safety gate",
  },
  {
    step: "Verify",
    action: "Confirm expected result",
    example: "Check files were deleted correctly",
    caroRole: "Can generate verification commands",
  },
];
