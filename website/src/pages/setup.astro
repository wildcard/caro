    font-size: 1.25rem;
    font-weight: 600;
    margin: 0 0 1rem 0;
    color: var(--color-text, #24292f);
  }

  .config-list {
    margin: 0;
    padding-left: 1.5rem;
  }

  .config-list li {
    margin: 0.75rem 0;
    line-height: 1.6;
    color: var(--color-text, #24292f);
  }

  .env-vars {
    margin: 1.5rem 0;
  }

  .env-priority {
