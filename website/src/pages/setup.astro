  }

  .tip-card {
    padding: 1.5rem;
    background: var(--color-bg-secondary, #f6f8fa);
    border: 1px solid var(--color-border, #d0d7de);
    border-radius: 8px;
  }

  .tip-title {
    font-size: 1.125rem;
    font-weight: 600;
