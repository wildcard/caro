    border: 2px solid #fd8c4e;
    border-radius: 12px;
  }

  .help-icon {
    font-size: 2rem;
    flex-shrink: 0;
  }

  .help-title {
    margin: 0 0 0.5rem 0;
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--color-text, #24292f);
  }

  .help-text {
    margin: 0;
    line-height: 1.6;
    color: var(--color-text-secondary, #57606a);
  }

  .help-text a {
    color: #fd8c4e;
    text-decoration: none;
    font-weight: 500;
  }

  .help-text a:hover {
    text-decoration: underline;
  }

  /* Mobile responsive */
  @media (max-width: 768px) {
    .page-title {
      font-size: 2rem;
    }

    .page-subtitle {
      font-size: 1.125rem;
    }

    .section-title {
      font-size: 1.5rem;
    }

    .integrations-grid,
    .tips-grid {
      grid-template-columns: 1fr;
    }
  }

  /* Dark mode support */
  @media (prefers-color-scheme: dark) {
    .setup-page {
      background: var(--color-bg, #0d1117);
    }

    .alias-example {
      background: var(--color-bg-secondary, #161b22);
    }

    .env-priority {
      background: var(--color-bg-secondary, #161b22);
    }

    .integration-item {
      background: var(--color-bg-tertiary, #1c2128);
      border-color: var(--color-border, #30363d);
