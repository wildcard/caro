  <script>
    // Theme switching
    const themes = ['terminal-dark', 'terminal-light', 'terminal-crt-amber', 'terminal-crt-green', 'terminal-vaporwave'];

    document.querySelectorAll('.theme-btn').forEach(btn => {
      btn.addEventListener('click', () => {
        const theme = btn.dataset.theme;
        const html = document.documentElement;

        // Remove all theme classes
        themes.forEach(t => html.classList.remove(t));

        // Add selected theme
        html.classList.add(theme);

        // Update active button
        document.querySelectorAll('.theme-btn').forEach(b => b.classList.remove('active'));
        btn.classList.add('active');

        // Save preference
        localStorage.setItem('terminal-theme', theme);
      });
    });

    // Restore saved theme
    const savedTheme = localStorage.getItem('terminal-theme');
    if (savedTheme && themes.includes(savedTheme)) {
      document.documentElement.classList.remove('terminal-dark');
      document.documentElement.classList.add(savedTheme);
      document.querySelectorAll('.theme-btn').forEach(btn => {
        btn.classList.toggle('active', btn.dataset.theme === savedTheme);
      });
    }

    // Typing animation for CLI
    const commands = [
      {
        input: 'caro "find all PDF files larger than 10MB"',
        output: 'find . -name "*.pdf" -type f -size +10M',
        status: 'Safe to run on your system'
      },
      {
        input: 'caro "show disk usage sorted by size"',
        output: 'du -sh */ | sort -rh | head -10',
        status: 'Safe to run on your system'
      },
      {
        input: 'caro "list files modified in the last week"',
        output: 'find . -type f -mtime -7',
        status: 'Safe to run on your system'
      },
      {
        input: 'caro "compress all images to a zip file"',
        output: 'find . -name "*.jpg" -o -name "*.png" | zip images.zip -@',
        status: 'Safe to run on your system'
      }
    ];

    let commandIndex = 0;
    const typedText = document.getElementById('typed-text');
    const cliOutput = document.getElementById('cli-output');

    function typeCommand(command, callback) {
      let charIndex = 0;
      typedText.textContent = '';
      cliOutput.innerHTML = '';

      const typeInterval = setInterval(() => {
        if (charIndex < command.input.length) {
          typedText.textContent += command.input[charIndex];
          charIndex++;
        } else {
          clearInterval(typeInterval);
          setTimeout(() => showOutput(command, callback), 400);
        }
      }, 40);
    }

    function showOutput(command, callback) {
      cliOutput.innerHTML = `
        <div class="output-line">
          <span class="output-prefix">üêï Caro:</span>
          <span class="output-command">${command.output}</span>
        </div>
        <div class="output-status">
          <span class="status-icon">‚úì</span>
          ${command.status}
        </div>
      `;

      setTimeout(callback, 3000);
    }

    function runDemo() {
      typeCommand(commands[commandIndex], () => {
        commandIndex = (commandIndex + 1) % commands.length;
        runDemo();
      });
    }

    // Start the demo after page load
    setTimeout(runDemo, 500);

    // Copy install command
    document.getElementById('copy-install')?.addEventListener('click', async () => {
      const command = 'curl -fsSL https://caro.sh/install | bash';
      try {
        await navigator.clipboard.writeText(command);
        const btn = document.getElementById('copy-install');
        btn.textContent = 'Copied!';
        setTimeout(() => btn.textContent = 'Copy', 2000);
      } catch (err) {
        console.error('Failed to copy:', err);
      }
    });

    // Smooth scroll for anchor links
    document.querySelectorAll('a[href^="#"]').forEach(anchor => {
      anchor.addEventListener('click', function (e) {
        e.preventDefault();
        const target = document.querySelector(this.getAttribute('href'));
        if (target) {
          target.scrollIntoView({ behavior: 'smooth', block: 'start' });
        }
      });
    });
  </script>
