      function simulateCaro(query) {
        if (!query) {
          outputHTML('<div class="tp-stdout"><div class="tp-stdout-line warning">Usage: caro "your natural language query"</div></div>');
          return;
        }

        // Find matching response
        let response = null;
        const lowerQuery = query.toLowerCase();

        for (const [key, val] of Object.entries(caroCommands)) {
          if (lowerQuery.includes(key)) {
            response = val;
            break;
          }
        }

        // Default response for unknown queries
        if (!response) {
          response = {
            cmd: `# Generated command for: ${query}`,
            safe: true,
            time: '0.042s'
          };
        }

        // Simulate thinking delay
        setTimeout(() => {
          if (response.safe) {
            outputHTML(`
<div class="tp-caro-box">
  <div class="tp-caro-header">
    <span class="tp-caro-icon">üêï</span>
    <span class="tp-caro-title">Caro</span>
    <span class="tp-caro-badge safe">‚úì SAFE</span>
  </div>
  <div class="tp-caro-body">
    <div class="tp-caro-label">Generated Command</div>
    <div class="tp-caro-command">${escapeHtml(response.cmd)}</div>
    <div class="tp-caro-meta">
      <span>‚è± ${response.time || '0.031s'}</span>
      <span>üñ• ${navigator.platform.includes('Mac') ? 'macOS' : navigator.platform.includes('Win') ? 'Windows' : 'Linux'}</span>
      <span>‚úì Ready to execute</span>
    </div>
  </div>
</div>`);
