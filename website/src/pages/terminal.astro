          const result = caroWasm.generate_command(query);
          if (result && result.command) {
            generatedCommand = result.command;
            commandSource = 'pattern';
          }
        }

        // Delay for animation, then show results
        setTimeout(async () => {
          updateProgress(80);

          if (!generatedCommand) {
            // No match found
            addStep('‚ùå', 'No suitable command pattern found', 'error');
            updateProgress(100);

            setTimeout(() => {
              thinkingEl.remove();
              outputHTML(`
<div class="tp-caro-box">
  <div class="tp-caro-header">
    <span class="tp-caro-icon">üêï</span>
    <span class="tp-caro-title">Caro</span>
    <span class="tp-caro-badge" style="background: rgba(139,148,158,0.15); color: var(--tp-text-muted);">NO MATCH</span>
  </div>
  <div class="tp-caro-body">
    <div class="tp-caro-label">Could not generate command</div>
    <div class="tp-caro-command" style="color: var(--tp-text-muted);"># ${escapeHtml(query)}</div>
    <div class="tp-caro-meta">
      <span>üí° Try: "find large files", "disk usage", "list processes"</span>
    </div>
  </div>
</div>`);
            }, 300);
            return;
          }

          // Safety validation
          addStep('üõ°', 'Running safety validation...', 'active');
          updateProgress(90);

          let isSafe = true;
          let riskLevel = 'low';
          let explanation = 'Command appears safe';
          let matchedPatterns = [];

          if (wasmReady && caroWasm) {
            const validation = caroWasm.validate_command(generatedCommand);
            isSafe = validation.is_safe;
            riskLevel = validation.risk_level;
            explanation = validation.explanation;
            matchedPatterns = validation.matched_patterns || [];
          }

          setTimeout(() => {
            if (isSafe) {
              addStep('‚úÖ', 'Safety check passed', 'complete');
            } else {
              addStep('üö´', `BLOCKED: ${explanation}`, 'error');
            }
            updateProgress(100);

            const elapsed = ((performance.now() - startTime) / 1000).toFixed(3);
            const sourceLabel = commandSource === 'ai' ? 'ü§ñ AI' : 'üîç Pattern';

            setTimeout(() => {
              thinkingEl.remove();

              if (isSafe) {
                outputHTML(`
<div class="tp-caro-box">
  <div class="tp-caro-header">
    <span class="tp-caro-icon">üêï</span>
    <span class="tp-caro-title">Caro</span>
    <span class="tp-caro-badge safe">‚úì SAFE</span>
  </div>
  <div class="tp-caro-body">
    <div class="tp-caro-label">Generated Command</div>
    <div class="tp-caro-command">${escapeHtml(generatedCommand)}</div>
    <div class="tp-caro-meta">
      <span>‚è± ${elapsed}s</span>
      <span>üñ• ${platform}</span>
      <span>${sourceLabel}</span>
      <span>Risk: ${riskLevel}</span>
    </div>
  </div>
</div>`);
              } else {
                outputHTML(`
<div class="tp-caro-box">
  <div class="tp-caro-header">
    <span class="tp-caro-icon">üêï</span>
    <span class="tp-caro-title">Caro</span>
    <span class="tp-caro-badge blocked">‚úï BLOCKED</span>
  </div>
  <div class="tp-caro-body">
    <div class="tp-caro-label">Dangerous Command Blocked</div>
    <div class="tp-caro-command" style="color: var(--tp-error);">${escapeHtml(generatedCommand)}</div>
    <div class="tp-caro-meta">
      <span style="color: var(--tp-error);">Risk: ${riskLevel.toUpperCase()}</span>
      <span style="color: var(--tp-error);">‚ö† ${explanation}</span>
    </div>
    ${matchedPatterns.length > 0 ? `<div class="tp-caro-meta" style="margin-top: 4px;"><span style="color: var(--tp-text-dim);">Patterns: ${matchedPatterns.join(', ')}</span></div>` : ''}
  </div>
</div>`);
              }
              scrollToBottom();
            }, 300);
          }, 200);
        }, 600);
      }

      // Direct command validation (for testing dangerous commands)
      function validateCommand(command) {
        if (!wasmReady || !caroWasm) {
          return { is_safe: true, explanation: 'WASM not loaded' };
        }
        return caroWasm.validate_command(command);
      }

      function runDemo() {
        outputHTML(`<div class="tp-stdout"><div class="tp-stdout-line info">Running demo...</div></div>`);

        const demos = [
          { q: 'find large files', delay: 800 },
          { q: 'show disk usage', delay: 1200 },
          { q: 'delete everything', delay: 1200 },
        ];

        let i = 0;
        function next() {
          if (i >= demos.length) {
            startEntry();
            outputHTML(`<div class="tp-stdout"><div class="tp-stdout-line success">Demo complete! Try your own queries.</div></div>`);
            scrollToBottom();
            return;
          }
          const demo = demos[i];
          startEntry();
          showPrompt(`caro "${demo.q}"`);
          setTimeout(() => {
            simulateCaro(demo.q);
            i++;
            setTimeout(next, demo.delay);
          }, 200);
        }
        setTimeout(next, 300);
      }

    })();
  </script>
