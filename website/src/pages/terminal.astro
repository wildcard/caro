---
/**
 * Terminal-Centric Landing Page (Buildkite-inspired)
 *
 * All content displayed INSIDE the terminal
 * Proper shell UX with clear input/output distinction
 */
import { SITE_CONFIG } from '../config/site';
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <meta name="description" content="Caro - Safe shell commands you can trust." />
  <link rel="icon" type="image/png" href="/caro-pixel.png" />
  <title>Caro | Your Tools Should Earn Your Trust</title>
</head>
<body>
  <div class="terminal-page" data-theme="dark">
    <header class="tp-header">
      <div class="tp-header-content">
        <div class="tp-logo-section">
          <img src="/caro-pixel.png" alt="Caro" class="tp-logo-img" />
          <span class="tp-logo-text">caro</span>
          <span class="tp-version">v{SITE_CONFIG.version}</span>
        </div>
        <div class="tp-header-right">
          <nav class="tp-nav">
            <a href="/" class="tp-nav-link">Main Site</a>
            <a href="https://github.com/wildcard/caro" class="tp-nav-link" target="_blank">GitHub</a>
          </nav>
          <div class="tp-theme-switcher">
            <button class="tp-theme-btn tp-theme-dark active" data-theme="dark" title="Dark"></button>
            <button class="tp-theme-btn tp-theme-light" data-theme="light" title="Light"></button>
            <button class="tp-theme-btn tp-theme-amber" data-theme="amber" title="CRT Amber"></button>
            <button class="tp-theme-btn tp-theme-green" data-theme="green" title="CRT Green"></button>
          </div>
        </div>
      </div>
    </header>

    <section class="tp-hero">
      <div class="tp-container">
        <h1 class="tp-headline">
          Your tools should <strong>earn your trust</strong>,<br/>not ask for it.
        </h1>

        <div class="tp-terminal" id="terminal">
          <div class="tp-terminal-header">
            <div class="tp-dots">
              <span class="tp-dot tp-dot-red"></span>
              <span class="tp-dot tp-dot-yellow"></span>
              <span class="tp-dot tp-dot-green"></span>
            </div>
            <span class="tp-terminal-title">caro ‚Äî bash</span>
            <div class="tp-terminal-spacer"></div>
          </div>
          <div class="tp-terminal-body" id="terminal-body">
            <div id="terminal-output"></div>
            <div class="tp-input-line" id="input-line">
              <span class="tp-prompt"><span class="tp-user">guest</span>@<span class="tp-host">caro.sh</span>:<span class="tp-path">~</span>$ </span>
              <input type="text" id="terminal-input" class="tp-input" autocomplete="off" autocapitalize="off" spellcheck="false" />
            </div>
          </div>
        </div>
        <p class="tp-hint">Click terminal and type <code>help</code> ‚Ä¢ Try <code>caro "list large files"</code></p>
      </div>
    </section>

    <footer class="tp-footer">
      <span>caro v{SITE_CONFIG.version} ‚Ä¢ AGPL-3.0 ‚Ä¢ Built with Rust</span>
    </footer>
  </div>

  <style>
    .terminal-page {
      --tp-bg: #0d1117;
      --tp-bg-secondary: #161b22;
      --tp-bg-tertiary: #21262d;
      --tp-text: #c9d1d9;
      --tp-text-muted: #8b949e;
      --tp-text-dim: #484f58;
      --tp-accent: #ff8c42;
      --tp-success: #3fb950;
      --tp-error: #f85149;
      --tp-warning: #d29922;
      --tp-info: #58a6ff;
      --tp-cyan: #56d4dd;
      --tp-magenta: #db61a2;
      --tp-border: #30363d;
      --tp-font: 'SF Mono', 'Monaco', 'Menlo', 'Consolas', monospace;
      font-family: var(--tp-font);
      background: var(--tp-bg);
      color: var(--tp-text);
      min-height: 100vh;
      margin: 0;
      padding: 0;
      display: flex;
      flex-direction: column;
    }

    .terminal-page[data-theme="light"] {
      --tp-bg: #ffffff;
      --tp-bg-secondary: #f6f8fa;
      --tp-bg-tertiary: #eaeef2;
      --tp-text: #1f2328;
      --tp-text-muted: #656d76;
      --tp-text-dim: #8c959f;
      --tp-border: #d0d7de;
    }

    .terminal-page[data-theme="amber"] {
      --tp-bg: #0a0800;
      --tp-bg-secondary: #141000;
      --tp-bg-tertiary: #1e1800;
      --tp-text: #ffb000;
      --tp-text-muted: #cc8c00;
      --tp-text-dim: #806000;
      --tp-accent: #ffcc00;
      --tp-success: #44ff44;
      --tp-error: #ff4444;
      --tp-info: #ffcc00;
      --tp-cyan: #ffcc00;
      --tp-border: #3a2800;
    }

    .terminal-page[data-theme="green"] {
      --tp-bg: #001200;
      --tp-bg-secondary: #001a00;
      --tp-bg-tertiary: #002200;
      --tp-text: #00ff00;
      --tp-text-muted: #00cc00;
      --tp-text-dim: #008000;
      --tp-accent: #00ff88;
      --tp-success: #00ff00;
      --tp-error: #ff4444;
      --tp-info: #00ffff;
      --tp-cyan: #00ffff;
      --tp-border: #004400;
    }

    .terminal-page[data-theme="amber"]::after,
    .terminal-page[data-theme="green"]::after {
      content: '';
      position: fixed;
      inset: 0;
      pointer-events: none;
      background: repeating-linear-gradient(0deg, rgba(0,0,0,0.1) 0px, rgba(0,0,0,0.1) 1px, transparent 1px, transparent 2px);
      z-index: 9999;
    }

    .terminal-page .tp-header {
      padding: 10px 20px;
      border-bottom: 1px solid var(--tp-border);
      background: var(--tp-bg-secondary);
    }

    .terminal-page .tp-header-content {
      max-width: 900px;
      margin: 0 auto;
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    .terminal-page .tp-logo-section {
      display: flex;
      align-items: center;
      gap: 8px;
    }

    .terminal-page .tp-logo-img {
      width: 24px;
      height: 24px;
      image-rendering: pixelated;
    }

    .terminal-page .tp-logo-text {
      font-size: 18px;
      font-weight: 700;
      color: var(--tp-accent);
    }

    .terminal-page .tp-version {
      font-size: 10px;
      color: var(--tp-text-dim);
      background: var(--tp-bg-tertiary);
      padding: 2px 5px;
      border-radius: 3px;
    }

    .terminal-page .tp-header-right {
      display: flex;
      align-items: center;
      gap: 16px;
    }

    .terminal-page .tp-nav {
      display: flex;
      gap: 12px;
    }

    .terminal-page .tp-nav-link {
      color: var(--tp-text-muted);
      text-decoration: none;
      font-size: 12px;
    }

    .terminal-page .tp-nav-link:hover {
      color: var(--tp-accent);
    }

    .terminal-page .tp-theme-switcher {
      display: flex;
      gap: 4px;
      padding: 3px;
      background: var(--tp-bg);
      border-radius: 5px;
      border: 1px solid var(--tp-border);
    }

    .terminal-page .tp-theme-btn {
      width: 16px;
      height: 16px;
      border-radius: 50%;
      border: 2px solid transparent;
      cursor: pointer;
    }

    .terminal-page .tp-theme-btn:hover { transform: scale(1.1); }
    .terminal-page .tp-theme-btn.active { border-color: var(--tp-text); }
    .terminal-page .tp-theme-dark { background: #21262d; }
    .terminal-page .tp-theme-light { background: #f0f0f0; }
    .terminal-page .tp-theme-amber { background: linear-gradient(135deg, #ffb000, #ff8800); }
    .terminal-page .tp-theme-green { background: linear-gradient(135deg, #00ff00, #00aa00); }

    .terminal-page .tp-hero {
      flex: 1;
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 16px;
    }

    .terminal-page .tp-container {
      width: 100%;
      max-width: 800px;
    }

    .terminal-page .tp-headline {
      font-size: clamp(20px, 3.5vw, 32px);
      font-weight: 400;
      margin-bottom: 20px;
      color: var(--tp-text);
      text-align: center;
      line-height: 1.3;
    }

    .terminal-page .tp-headline strong {
      color: var(--tp-accent);
      font-weight: 600;
    }

    .terminal-page .tp-terminal {
      background: var(--tp-bg-secondary);
      border: 1px solid var(--tp-border);
      border-radius: 8px;
      overflow: hidden;
      box-shadow: 0 8px 32px rgba(0,0,0,0.4);
    }

    .terminal-page .tp-terminal-header {
      display: flex;
      align-items: center;
      padding: 8px 12px;
      background: var(--tp-bg-tertiary);
      border-bottom: 1px solid var(--tp-border);
    }

    .terminal-page .tp-dots { display: flex; gap: 6px; }
    .terminal-page .tp-dot { width: 10px; height: 10px; border-radius: 50%; }
    .terminal-page .tp-dot-red { background: #ff5f56; }
    .terminal-page .tp-dot-yellow { background: #ffbd2e; }
    .terminal-page .tp-dot-green { background: #27c93f; }
    .terminal-page .tp-terminal-title { flex: 1; text-align: center; font-size: 11px; color: var(--tp-text-dim); }
    .terminal-page .tp-terminal-spacer { width: 52px; }

    .terminal-page .tp-terminal-body {
      padding: 12px 14px;
      min-height: 340px;
      max-height: 420px;
      overflow-y: auto;
      font-size: 13px;
      line-height: 1.4;
    }

    /* Terminal output styling */
    .terminal-page .tp-line { margin-bottom: 2px; white-space: pre-wrap; word-break: break-word; }

    /* Command line - both past and active should look identical */
    .terminal-page .tp-command-line {
      display: flex;
      align-items: center;
      margin: 4px 0;
    }
    .terminal-page .tp-prompt { white-space: nowrap; }
    .terminal-page .tp-user { color: var(--tp-success); font-weight: 600; }
    .terminal-page .tp-host { color: var(--tp-cyan); }
    .terminal-page .tp-path { color: var(--tp-info); }
    .terminal-page .tp-cmd-text { color: var(--tp-text); }

    /* Stdout output block - structured and readable */
    .terminal-page .tp-stdout {
      margin: 4px 0 8px 0;
      padding: 8px 12px;
      background: var(--tp-bg);
      border-left: 2px solid var(--tp-border);
      font-size: 12px;
      line-height: 1.5;
    }
    .terminal-page .tp-stdout-line { color: var(--tp-text-muted); }
    .terminal-page .tp-stdout-line.success { color: var(--tp-success); }
    .terminal-page .tp-stdout-line.error { color: var(--tp-error); }
    .terminal-page .tp-stdout-line.warning { color: var(--tp-warning); }
    .terminal-page .tp-stdout-line.info { color: var(--tp-info); }
    .terminal-page .tp-stdout-line.accent { color: var(--tp-accent); }
    .terminal-page .tp-stdout-line.dim { color: var(--tp-text-dim); }
    .terminal-page .tp-stdout-line.cyan { color: var(--tp-cyan); }
    .terminal-page .tp-stdout-line.magenta { color: var(--tp-magenta); }

    /* Legacy output classes for compatibility */
    .terminal-page .tp-output { color: var(--tp-text-muted); margin-left: 0; }
    .terminal-page .tp-output-success { color: var(--tp-success); }
    .terminal-page .tp-output-error { color: var(--tp-error); }
    .terminal-page .tp-output-warning { color: var(--tp-warning); }
    .terminal-page .tp-output-info { color: var(--tp-info); }
    .terminal-page .tp-output-accent { color: var(--tp-accent); }
    .terminal-page .tp-output-dim { color: var(--tp-text-dim); }
    .terminal-page .tp-output-cyan { color: var(--tp-cyan); }
    .terminal-page .tp-output-magenta { color: var(--tp-magenta); }

    /* Caro output box */
    .terminal-page .tp-caro-box {
      margin: 8px 0;
      border: 1px solid var(--tp-border);
      border-radius: 4px;
      overflow: hidden;
      background: var(--tp-bg);
    }

    .terminal-page .tp-caro-header {
      padding: 6px 10px;
      background: var(--tp-bg-tertiary);
      border-bottom: 1px solid var(--tp-border);
      display: flex;
      align-items: center;
      gap: 8px;
      font-size: 11px;
    }

    .terminal-page .tp-caro-icon { font-size: 14px; }
    .terminal-page .tp-caro-title { color: var(--tp-accent); font-weight: 600; }
    .terminal-page .tp-caro-badge {
      margin-left: auto;
      padding: 2px 6px;
      border-radius: 3px;
      font-size: 10px;
      font-weight: 600;
    }
    .terminal-page .tp-caro-badge.safe { background: rgba(63,185,80,0.15); color: var(--tp-success); }
    .terminal-page .tp-caro-badge.blocked { background: rgba(248,81,73,0.15); color: var(--tp-error); }

    .terminal-page .tp-caro-body { padding: 10px; }
    .terminal-page .tp-caro-label { font-size: 10px; color: var(--tp-text-dim); text-transform: uppercase; letter-spacing: 0.5px; margin-bottom: 4px; }
    .terminal-page .tp-caro-command { font-size: 13px; color: var(--tp-info); background: var(--tp-bg-secondary); padding: 8px 10px; border-radius: 3px; margin-bottom: 8px; font-family: var(--tp-font); }
    .terminal-page .tp-caro-meta { font-size: 11px; color: var(--tp-text-dim); display: flex; gap: 12px; flex-wrap: wrap; }
    .terminal-page .tp-caro-meta span { display: flex; align-items: center; gap: 4px; }

    /* Help box */
    .terminal-page .tp-help-box {
      margin: 8px 0;
      border: 1px solid var(--tp-border);
      border-radius: 4px;
      background: var(--tp-bg);
      padding: 10px;
    }

    .terminal-page .tp-help-title { color: var(--tp-accent); font-weight: 600; margin-bottom: 8px; font-size: 12px; }
    .terminal-page .tp-help-section { margin-bottom: 10px; }
    .terminal-page .tp-help-section:last-child { margin-bottom: 0; }
    .terminal-page .tp-help-section-title { color: var(--tp-text-dim); font-size: 10px; text-transform: uppercase; letter-spacing: 0.5px; margin-bottom: 4px; }
    .terminal-page .tp-help-row { display: flex; font-size: 12px; margin-bottom: 2px; }
    .terminal-page .tp-help-cmd { color: var(--tp-cyan); min-width: 140px; }
    .terminal-page .tp-help-desc { color: var(--tp-text-muted); }

    /* Stats box */
    .terminal-page .tp-stats-box {
      margin: 8px 0;
      border: 1px solid var(--tp-border);
      border-radius: 4px;
      background: var(--tp-bg);
      padding: 10px;
    }

    .terminal-page .tp-stats-grid { display: grid; grid-template-columns: repeat(2, 1fr); gap: 8px; }
    .terminal-page .tp-stats-item { text-align: center; padding: 8px; background: var(--tp-bg-secondary); border-radius: 3px; }
    .terminal-page .tp-stats-value { font-size: 20px; font-weight: 700; color: var(--tp-accent); }
    .terminal-page .tp-stats-label { font-size: 10px; color: var(--tp-text-dim); text-transform: uppercase; }

    /* Input line - identical structure to past command lines */
    .terminal-page .tp-input-line {
      display: flex;
      align-items: center;
      margin: 4px 0;
    }
    .terminal-page .tp-input {
      flex: 1;
      background: transparent;
      border: none;
      color: var(--tp-text);
      font-family: var(--tp-font);
      font-size: 13px;
      outline: none;
      caret-color: var(--tp-accent);
      margin-left: 0;
    }

    .terminal-page .tp-hint {
      margin-top: 12px;
      font-size: 11px;
      color: var(--tp-text-dim);
      text-align: center;
    }

    .terminal-page .tp-hint code {
      color: var(--tp-info);
      background: var(--tp-bg-tertiary);
      padding: 1px 4px;
      border-radius: 2px;
    }

    .terminal-page .tp-footer {
      padding: 12px 20px;
      border-top: 1px solid var(--tp-border);
      text-align: center;
      font-size: 11px;
      color: var(--tp-text-dim);
    }

    @media (max-width: 600px) {
      .terminal-page .tp-header-content { flex-direction: column; gap: 10px; }
      .terminal-page .tp-terminal-body { min-height: 280px; }
      .terminal-page .tp-stats-grid { grid-template-columns: 1fr 1fr; }
    }
  </style>

  <script define:vars={{ version: SITE_CONFIG.version }}>
    (function() {
      const page = document.querySelector('.terminal-page');
      const terminalBody = document.getElementById('terminal-body');
      const terminalOutput = document.getElementById('terminal-output');
      const terminalInput = document.getElementById('terminal-input');
      const themeBtns = document.querySelectorAll('.tp-theme-btn');

      let history = [];
      let historyIndex = -1;

      // Command handlers
      const commands = {
        help: showHelp, h: showHelp,
        clear: clearTerminal, cls: clearTerminal,
        demo: runDemo,
        stats: showStats, s: showStats,
        install: showInstall, i: showInstall,
        features: showFeatures, f: showFeatures,
        github: () => { window.open('https://github.com/wildcard/caro', '_blank'); outputHTML('<div class="tp-stdout"><div class="tp-stdout-line info">Opening github.com/wildcard/caro...</div></div>'); },
        exit: () => window.location.href = '/',
        version: () => outputHTML(`<div class="tp-stdout"><div class="tp-stdout-line accent">caro ${version}</div></div>`),
        v: () => outputHTML(`<div class="tp-stdout"><div class="tp-stdout-line accent">caro ${version}</div></div>`),
        whoami: () => outputHTML('<div class="tp-stdout"><div class="tp-stdout-line">guest</div></div>'),
        pwd: () => outputHTML('<div class="tp-stdout"><div class="tp-stdout-line">/home/guest</div></div>'),
        date: () => outputHTML(`<div class="tp-stdout"><div class="tp-stdout-line">${new Date().toString()}</div></div>`),
        echo: (args) => outputHTML(`<div class="tp-stdout"><div class="tp-stdout-line">${escapeHtml(args || '')}</div></div>`),
      };

      // Caro command database - realistic responses
      const caroCommands = {
        'find python files': { cmd: 'find . -name "*.py" -type f', safe: true, time: '0.023s' },
        'find large files': { cmd: 'find . -type f -size +100M', safe: true, time: '0.156s' },
        'list large files': { cmd: 'find . -type f -size +100M -exec ls -lh {} \\;', safe: true, time: '0.089s' },
        'show disk usage': { cmd: 'du -sh * | sort -rh | head -10', safe: true, time: '0.034s' },
        'disk usage': { cmd: 'df -h', safe: true, time: '0.012s' },
        'memory usage': { cmd: 'free -h', safe: true, time: '0.008s' },
        'running processes': { cmd: 'ps aux --sort=-%cpu | head -10', safe: true, time: '0.021s' },
        'network connections': { cmd: 'netstat -tuln', safe: true, time: '0.045s' },
        'find text in files': { cmd: 'grep -r "pattern" . --include="*.txt"', safe: true, time: '0.067s' },
        'compress folder': { cmd: 'tar -czvf archive.tar.gz folder/', safe: true, time: '0.034s' },
        'delete everything': { cmd: 'rm -rf /', safe: false, reason: 'System destruction: recursive delete from root' },
        'rm -rf': { cmd: 'rm -rf /', safe: false, reason: 'System destruction: recursive force delete' },
        'format disk': { cmd: 'mkfs.ext4 /dev/sda', safe: false, reason: 'Disk destruction: filesystem format' },
        'fork bomb': { cmd: ':(){ :|:& };:', safe: false, reason: 'Resource exhaustion: fork bomb detected' },
        'delete system': { cmd: 'rm -rf /usr /bin /etc', safe: false, reason: 'System destruction: critical directory deletion' },
      };

      // Create or get current stdout block - must be defined before showWelcome
      let currentStdout = null;

      function startStdout() {
        currentStdout = document.createElement('div');
        currentStdout.className = 'tp-stdout';
        terminalOutput.appendChild(currentStdout);
      }

      function endStdout() {
        currentStdout = null;
      }

      function scrollToBottom() {
        terminalBody.scrollTop = terminalBody.scrollHeight;
      }

      function output(text, type = '') {
        if (!currentStdout) {
          startStdout();
        }
        const line = document.createElement('div');
        line.className = `tp-stdout-line${type ? ' ' + type : ''}`;
        line.textContent = text;
        currentStdout.appendChild(line);
      }

      function outputHTML(html) {
        endStdout();
        const div = document.createElement('div');
        div.innerHTML = html;
        terminalOutput.appendChild(div);
        scrollToBottom();
      }

      function clearTerminal() {
        terminalOutput.innerHTML = '';
      }

      function escapeHtml(text) {
        const div = document.createElement('div');
        div.textContent = text;
        return div.innerHTML;
      }

      showWelcome();

      // Event listeners
      document.getElementById('terminal').addEventListener('click', () => terminalInput.focus());

      terminalInput.addEventListener('keydown', (e) => {
        if (e.key === 'Enter') {
          const input = terminalInput.value.trim();
          if (input) {
            processInput(input);
            history.push(input);
            historyIndex = history.length;
          }
          terminalInput.value = '';
        } else if (e.key === 'ArrowUp') {
          e.preventDefault();
          if (historyIndex > 0) terminalInput.value = history[--historyIndex];
        } else if (e.key === 'ArrowDown') {
          e.preventDefault();
          if (historyIndex < history.length - 1) terminalInput.value = history[++historyIndex];
          else { historyIndex = history.length; terminalInput.value = ''; }
        } else if (e.key === 'Tab') {
          e.preventDefault();
          const val = terminalInput.value.toLowerCase();
          const cmds = Object.keys(commands);
          const match = cmds.find(c => c.startsWith(val));
          if (match) terminalInput.value = match;
        }
      });

      themeBtns.forEach(btn => {
        btn.addEventListener('click', () => {
          page.dataset.theme = btn.dataset.theme;
          themeBtns.forEach(b => b.classList.remove('active'));
          btn.classList.add('active');
          localStorage.setItem('terminal-page-theme', btn.dataset.theme);
        });
      });

      const savedTheme = localStorage.getItem('terminal-page-theme');
      if (savedTheme) {
        page.dataset.theme = savedTheme;
        themeBtns.forEach(btn => btn.classList.toggle('active', btn.dataset.theme === savedTheme));
      }

      function processInput(input) {
        // End any previous stdout block
        endStdout();

        showPrompt(input);

        const lower = input.toLowerCase();
        const parts = input.split(' ');
        const cmd = parts[0].toLowerCase();
        const args = parts.slice(1).join(' ');

        // Handle caro commands
        if (cmd === 'caro' || lower.startsWith('caro ')) {
          const query = input.replace(/^caro\s*/i, '').replace(/^["']|["']$/g, '');
          simulateCaro(query);
          endStdout();
          return;
        }

        // Handle built-in commands
        if (commands[cmd]) {
          if (typeof commands[cmd] === 'function') {
            commands[cmd](args);
          }
        } else {
          outputHTML(`<div class="tp-stdout"><div class="tp-stdout-line error">bash: ${escapeHtml(cmd)}: command not found</div></div>`);
        }

        scrollToBottom();
      }

      function showPrompt(cmd) {
